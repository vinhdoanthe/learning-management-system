<%= form_with(url: adm_redeem_redeem_product_brand_path, local: true, :method => :patch, :class => "form-horizontal") do |form| %>
  <div class="form-group row">
    <label for="brand_name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <%= form.text_field :name, :value => adm_redeem_redeem_product_brand.name, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit(class: 'btn btn-primary') %>
  </div>
<% end %>
