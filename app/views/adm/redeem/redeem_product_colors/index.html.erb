<h1>Redeem Redeem Product Colors</h1>
<div class="table-responsive">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Color name</th>
        <th>Color code</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @adm_redeem_redeem_product_colors.each do |adm_redeem_redeem_product_color| %>
        <tr>
          <th><%= adm_redeem_redeem_product_color.id %></th>
          <td><%= adm_redeem_redeem_product_color.name %></td>
          <td>
            <input type="color" value="<%= adm_redeem_redeem_product_color.color_code %>" disabled>
          </td>
          <td><%= link_to 'Edit', edit_adm_redeem_redeem_product_color_path(adm_redeem_redeem_product_color), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', adm_redeem_redeem_product_color_path(adm_redeem_redeem_product_color), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Redeem Redeem Product Color', new_adm_redeem_redeem_product_color_path, class: 'btn btn-primary' %>
