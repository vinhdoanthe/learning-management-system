<%= form_with(url: adm_redeem_redeem_product_colors_path, local: true) do |form| %>

  <div class="form-group row">
    <label for="color_name" class="col-sm-2 col-form-label">Color</label>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label for="color_code" class="col-sm-2 col-form-label">Color</label>
    <div class="col-sm-10">
      <%= form.color_field :color_code, class: "form-control" %>
    </div>
  </div>

<div class="actions">
  <%= form.submit(class: 'btn btn-success') %>
</div>
<% end %>
