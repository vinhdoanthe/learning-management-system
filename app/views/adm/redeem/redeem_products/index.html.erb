<h3 style="display: inline-block">Redeem Products</h3>
<%= link_to 'New Redeem Product', new_adm_redeem_redeem_product_path, class: "btn btn-primary" %>
<div class="table table-responsive">
  <table class="table table-condensed">
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Code</th>
      <th>Images</th>
      <th>Price</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @adm_redeem_redeem_products.each do |product| %>
        <tr>
          <th><%= product.id %></th>
          <td><%= product.name %></td>
          <td><%= product.code %></td>
          <td>
            <% if product.images.attached? %>
              <%= image_tag(product.images.first.variant(resize_to_limit: [142, 106])) %>
            <% end %>
          </td>
          <td><%= product.price %></td>
          <td><%= sanitize(product.description) %></td>
          <td><%= product.created_at %></td>
          <td><%= product.updated_at %></td>
          <td>
            <%= link_to "Show", adm_redeem_redeem_product_path(product), class: 'btn btn-primary' %>
          </td>
          <td>
            <%= link_to "Edit", edit_adm_redeem_redeem_product_path(product), class: "btn btn-warning" %>
          </td>
          <td>
            <%= link_to "Remove", adm_redeem_redeem_product_path(product), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

