<%= tinymce_assets %>
<%= javascript_include_tag 'tinymce/langs/vi_VN.js' %>
<div class="card">
  <%= form_with(url: adm_redeem_redeem_products_path, local: true) do |form| %>
    <div class="card-body">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_name') %></label>
        <div class="col-sm-10">
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group row">
        <label for="code" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_code') %></label>
        <div class="col-sm-10">
          <%= form.text_field :code, class: "form-control", required: true  %>
        </div>
      </div>
      <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_price') %></label>
        <div class="col-sm-10">
          <%= form.number_field :price, class: "form-control", required: true  %>
        </div>
      </div>
      <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_description') %></label>
        <div class="col-sm-10">
          <%= form.text_area :description, required: true,  class: 'tinymce' %>
        </div>
      </div>
      <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_category') %></label>
        <div class="col-sm-10">
          <%= form.collection_select(:category_id, Redeem::RedeemProductCategory.order(:created_at => :ASC).all, :id, :name) %>
        </div>
      </div>
      <div class="form-group row">
        <label for="brand" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_brand') %></label>
        <div class="col-sm-10">
          <%= form.collection_select(:brand_id, Redeem::RedeemProductBrand.order(:created_at => :ASC).all, :id, :name) %>
        </div>
      </div>
      <div class="form-group row">
        <label for="images" class="col-sm-2 col-form-label"><%= t('adm.redeem.redeem_product_images') %></label>
        <div class="col-sm-10">
          <%= form.file_field :images, required: true,  multiple: true, accept: 'image/png,image/gif,image/jpeg' %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= form.button "<i class='fas fa-save'></i>&nbsp;Create".html_safe, class: "btn btn-sm btn-primary" %>
      <%= link_to "<i class='fas fa-angle-double-left'></i>&nbsp; Back".html_safe, adm_redeem_redeem_products_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  <% end %>
</div>
<%= tinymce :simple %>
