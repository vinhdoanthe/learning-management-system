<%= stylesheet_link_tag 'adm/redeem/redeem_product_items' %>
<%= javascript_include_tag 'adm/redeem/redeem_product_items' %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= t('adm.redeem.product_items') %></h3>
    <div class="card-tools">
      <%= link_to "<i class='far fa-plus-square'></i>&nbsp;#{t('adm.redeem.actions_add_items')}".html_safe, new_adm_redeem_redeem_product_item_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class='filter_form card-body'>
    <div class='row p-10'>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="form-group">
          <label for="filter-products"><%= t('adm.redeem.products') %></label>
          <select class="select2 select2-hidden-accessible" id='filter-products' data-placeholder="<%= t("adm.redeem.select_product") %>" name="products[]" multiple="multiple" style="width: 100%;">
            <option value='all'>Tất cả</option>
            <% @products.each do |product| %>
              <option value='<%= product.id %>'><%= product.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="col-md-2 col-sm-6 col-xs-12">
        <div class="form-group">
          <label for="filter-state"><%= t('adm.redeem.item_state') %></label>
          <select class="select2 select2-hidden-accessible" id='filter-state' data-placeholder="<%= t("adm.redeem.select_item_state") %>" name="item_states[]" multiple="multiple" style="width: 100%;">
            <option value='all'>Tất cả</option>
            <% @product_item_states.each do |state| %>
              <option value='<%= state %>'><%= state %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class='col-md-3 col-sm-6 col-xs-12'>
        <div class="form-group">
          <label for="filter-input-date"><%= t("adm.redeem.item_input_date") %></label>
          <input type="text" class="form-control" id="filter-input-date">
        </div>
      </div>
      <div class='col-md-3 col-sm-6 col-xs-12'>
        <div class="form-group">
          <label for="filter-release-date"><%= t("adm.redeem.item_release_date") %></label>
          <input type="text" class="form-control" id="filter-release-date">
        </div>
      </div>
      <div class="col-md-1 col-sm-6 col-xs-12">
        <div class="form-group">
          <label for="submit_filter_product">&nbsp;</label>
          <input type="submit" class="btn btn-primary" style="width:100%" id="submit_filter_product" value="<%= t("adm.user.filter") %>">
        </div>
      </div>
    </div>
  </div>
</div>
<div class='card'>
  <div class="card-body p-0">
    <div class="table table-responsive">
      <table class="table table-condensed table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th><%= t('adm.redeem.products') %></th>
            <th><%= t('adm.redeem.item_code') %></th>
            <th><%= t('adm.redeem.item_size') %></th>
            <th><%= t('adm.redeem.item_color') %></th>
            <th><%= t('adm.redeem.item_state') %></th>
            <th><%= t('adm.redeem.item_transaction') %></th>
            <th><%= t('adm.redeem.item_input_date') %></th>
            <th><%= t('adm.redeem.item_release_date') %></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @adm_redeem_redeem_products_items.each do |item| %>
            <%= render :partial => "product_item_tr", :locals => {item: item} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= paginate @adm_redeem_redeem_products_items %>
  </div>
</div>
