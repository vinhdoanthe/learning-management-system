<% redeem_product = @adm_redeem_redeem_product_item.redeem_product %>
<div class="card">
  <div class="card-header">
    <h3><%= @adm_redeem_redeem_product_item.item_code %></h3>
  </div>
  <div class="card-body p-10">
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Product</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= redeem_product&.name %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Price</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= number_with_delimiter(redeem_product.price) %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Description</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= redeem_product&.description.html_safe %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Brand</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= redeem_product&.redeem_product_brand.name %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Category</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= redeem_product&.redeem_product_category.name %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Color</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= @adm_redeem_redeem_product_item.redeem_product_color&.name %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Size</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= @adm_redeem_redeem_product_item.redeem_product_size&.name %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>State</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= @adm_redeem_redeem_product_item.state %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <h4>Input date</h4> 
      </div>
      <div class="col-md-8 col-sm-12">
        <p><%= @adm_redeem_redeem_product_item.input_date %></p>
      </div>
    </div>
    <% if @adm_redeem_redeem_product_item.transaction_id %>
      <div class="row">
        <div class="col-md-4 col-sm-12">
          <h4>Transaction</h4> 
        </div>
        <div class="col-md-8 col-sm-12">
          <p><%= "Transaction #{@adm_redeem_redeem_product_item.transaction_id}" %></p>
        </div>
      </div>
    <% end %>
    <% if @adm_redeem_redeem_product_item.release_date %>
      <div class="row">
        <div class="col-md-4 col-sm-12">
          <h4>Transaction</h4> 
        </div>
        <div class="col-md-8 col-sm-12">
          <p><%= @adm_redeem_redeem_product_item.release_date %></p>
        </div>
      </div>
    <% end %>
    <div class="card-footer clearfix">
      <%= link_to 'Back', adm_redeem_redeem_product_items_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
