<%= stylesheet_link_tag "fotorama.css" %>
<%= javascript_include_tag "fotorama.js" %>

<button type="button" class="close close-modal" data-dismiss="modal">&times;</button>
<div class="fotorama"  data-allowfullscreen="true" data-nav="thumbs" data-fit="scaledown" data-thumbwidth="100" data-arrows="true" data-click="true" data-swipe="true" data-hash="true" data-width='100%' data-height='100%'>
  <% photos.each do |photo| %>
    <!-- <%#= image_tag photo.image %> -->
    <a href="<%= url_for(photo.image) %>"></a>
  <% end %>
</div>
<style>
  .close-modal {
    position: absolute;
    font-size: 40px;
    font-weight: 700;
    right: 20px;
    z-index: 10;
    color: white;
  }
  .close-modal:hover {
    color: white;
  }
  .fotorama__fullscreen-icon {
    display: none;
  }
  .fotorama__nav-wrap {
    background-color: black;
  }
  .fotorama__wrap--slide .fotorama__stage__frame {
    background-color: black;
  }
</style>
  <script>
    $(document).ready(function(){
      $('.fotorama').fotorama();
    })
  </script>
