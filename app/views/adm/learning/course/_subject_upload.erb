<form id="frm_subject" class="form-horizontal" method="post" action="<%= adm_learning_course_subject_upload_path%>" enctype="multipart/form-data">
<input type="hidden" name="frm_subject[subject_id]" id="frm_subject_id">
<input type="hidden" name="frm_subject[course_id]" value="<%= @course.id%>">
<div class="modal fade" id="remoteModalPhoto" role="dialog" aria-labelledby="remoteModalPhotoLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">OPEN</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">        
          <div class="form-group row">
            <label class="col-sm-3 col-form-label"><%= t('adm.course.Photo of Subject')%></label>
            <div class="col-sm-9">
              <input data-fileupload="true" type="file" name="frm_subject[thumbnail]" id="frm_image_thumbnail">
              <div style="color:#dc3545;"><%= t('adm.course.Please enter the subject image size')%></div>              
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-3 col-form-label"><%= t('adm.course.Photo of Lesson')%></label>
            <div class="col-sm-9">
              <input data-fileupload="true" type="file" name="frm_subject[lesson_thumbnail][]" multiple>           
              <div style="color:#dc3545;"><%= t('adm.course.Subject image note')%></div>              
            </div>
          </div>
      </div>
      <div class="modal-footer justify-content-right">
        <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-upload"></i> <%= t('button.Upload')%></button>
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
          <i class="fas fa-ban"></i> <%= t('button.Close')%>
        </button>
      </div>
    </div>
  </div>
</div>
</form>