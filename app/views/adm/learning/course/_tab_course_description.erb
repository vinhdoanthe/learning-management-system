<div class="row">
	<div class="col-md-6">
		<div class="row">
			<label class="col-sm-3 control-label"><%= t('adm.course.course_name')%>:</label>
			<div class="col-sm-9"><%= @course.name%></div>
		</div>
		<div class="row"><label class="col-sm-3 control-label"><%= t('adm.course.course_code')%>:</label> 
			<div class="col-sm-9"><%= @course.code%></div>
		</div>
		<div class="row"><label class="col-sm-3 control-label"><%= t('adm.course.Section')%>:</label>
			<div class="col-sm-9"><%= @course.section%></div>
		</div>
		<div class="row"><label class="col-sm-3 control-label"><%= t('adm.course.number_subjects')%>:</label>
			<div class="col-sm-9"><span class="text-danger text-bold"><%= @subjects.length%></span></div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="row">
			<label class="col-sm-3 control-label"><%= t('adm.course.Ages')%>:</label>
			<div class="col-sm-9"><%= @course.suitable_age%></div>
		</div>
		<div class="row"><label class="col-sm-3 control-label"><%= t('adm.course.Duration')%>:</label> 
			<div class="col-sm-9"><%= @course.duration%></div>
		</div>
		<div class="row"><label class="col-sm-3 control-label"><%= t('adm.course.Tools')%>:</label>
			<div class="col-sm-9"><%= @course.equipments%></div>
		</div>
		<div class="row"><label class="col-sm-3 control-label"><%= t('adm.course.Conditions learning')%>:</label>
			<div class="col-sm-9"><span class="text-danger text-bold"><%= @course.prerequisites%></span></div>
		</div>
	</div>
</div>
<% course_description = get_description(@course) %>
<div class="row">
	<div class="col-sm-12">
		<hr/>
		<h2 class="lms-course-title"><%= t('adm.course.course_description')%></h2>
		<div class="custom-scroll"><%= course_description.html_safe %></div>

		<h2 class="lms-course-title"><%= t('adm.course.What do students learn?')%></h2>
		<div class="custom-scroll"><%= @course.competences.to_s.html_safe %></div>
	</div>
</div>
