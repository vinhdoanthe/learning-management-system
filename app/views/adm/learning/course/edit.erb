                  <div class="col-sm-9">
                    <input
                    type="text" required
                    maxlength="50"
                    placeholder="<%= t('adm.course.Example equipments')%>"
                    class="form-control"
                    id="frm_course_equipments"
                    name="frm_course[equipments]"
                    value="<%= @frm_course[:equipments]%>"/>
                  </div>
                  <% else%>
