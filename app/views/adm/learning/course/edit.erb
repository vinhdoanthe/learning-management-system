                    maxlength="50"
                    placeholder="<%= t('adm.course.Example Suitable age')%>"
                    class="form-control"
                    id="frm_course_suitable_age"
                    name="frm_course[suitable_age]"
                    value="<%= @frm_course[:suitable_age]%>"/>
                  </div>
                  <% else%>
