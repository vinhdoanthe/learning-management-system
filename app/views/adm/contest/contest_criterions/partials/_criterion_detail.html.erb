<div class='row'>
  <div class="form-group col-md-6">
    <label for="criterion_name">Criterion_name</label>
    <input class="form-control" value="<%= criterion&.name %>" <%= criterion_option %> id="criterion_name" placeholder="Enter name">
  </div>
  <div class="form-group col-md-6">
    <label for="criterion_point">Point</label>
    <input type='number' class="form-control" value="<%= criterion&.point %>" <%= criterion_option %> id="criterion_point" placeholder="Enter point">
  </div>
</div>
<div class="form-group">
  <label for="criterion_description">Criterion_description</label>
  <textarea class="form-control" value="<%= criterion&.description %>" <%= criterion_option %> id="criterion_description" placeholder="Enter description"></textarea>
</div>
