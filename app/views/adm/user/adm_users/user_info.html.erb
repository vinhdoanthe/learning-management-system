<h3>Thông tin người dùng <%= @info[:name] %></h3>
<hr>
<div class='display nowrap' style='width:100%'>
  <div class='row'>
    <div class='col-md-8 user_infomation'>
      <div class='row'>
        <div class='col-md-3'>
          <label>Tên người dùng:</label>
        </div>
        <div class='col-md-9'>
          <!--<input readonly value="<%#= @info[:name] %>"></input> -->
          <p><%= @info[:name] %></p>
        </div>
      </div>
      <hr>
      <div class='row'>
        <div class='col-md-3'>
          <label>Tên đăng nhập:</label>
        </div>
        <div class='col-md-9'>
          <!-- <input readonly value="<%#= @info[:user].username %>"></input> -->
          <p><%= @info[:user].username %></p>
        </div>
      </div>
      <hr>
      <div class='row'>
        <div class='col-md-3'>
          <label>Loại tài khoản:</label>
        </div>
        <div class='col-md-9'>
          <!-- <input readonly value="<%#= @info[:user].account_role %>"></input> -->
          <p><%= @info[:user].account_role %></p>
        </div>
      </div>
      <hr>
      <div class='row'>
        <div class='col-md-3'>
          <label>Email:</label>
        </div>
        <div class='col-md-9'>
          <!-- <input readonly value="<%#= @info[:email] %>"></input> -->
          <p><%= @info[:email] %></p>
        </div>
      </div>
      <hr>
      <div class='row'>
        <div class='col-md-3'>
          <label>Số điện thoại:</label>
        </div>
        <div class='col-md-9'>
          <!-- <input readonly value="<%#= @info[:mobile] %>"></input> -->
          <p><%= @info[:mobile] %></p>
        </div>
      </div>
      <hr>
      <div class='row'>
        <div class='col-md-3'>
          <label>Cơ sở:</label>
        </div>
        <div class='col-md-9'>
          <!-- <input readonly value="<%#= @info[:company] %>"></input> -->
          <p><%= @info[:company] %></p>
        </div>
      </div>
      <hr>
      <% if @info[:parent].present? %>
        <div class='row'>
          <div class='col-md-3'>
            <label>Phụ huynh:</label>
          </div>
          <div class='col-md-9'>
            <a href="/adm/user/user_info/<%= @info[:parent_user].id %>" ><%= @info[:parent_name] %></a>
          </div>
        </div>
        <hr>
      <% end %>
      <% if @info[:children].present? %>
        <div class='row'>
          <div class='col-md-3'>
            <label>Học sinh:</label>
          </div>
          <div class='col-md-9'>
            <% @info[:children].each do |child| %>
              <a href="/adm/user/user_info/<%= child[0] %>"><%= child[1] %></a> ;
            <% end %>
          </div>
        </div>
        <hr>
      <% end %>
      <div class='row'>
        <div class='col-md-3'>
          <label>Ngày tạo:</label>
        </div>
        <div class='col-md-9'>
          <!-- <input readonly value="<%#= @info[:user].created_at %>"> -->
          <p><%= @info[:user].created_at %></p>
        </div>
      </div>
      <hr>
      <div class='row'>
        <div class='col-md-3'>
          <label>Lần đăng nhập cuối:</label>
        </div>
        <div class='col-md-9'>
          <!--   <input readonly value="<%#= @info[:user].last_sign_in_at %>"> -->
          <p><%= @info[:user].last_sign_in_at %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <h4 style="text-align: center">Ảnh đại diện</h4>
      <div class="user_avatar">
      <%= (User::Account::UserDecorator.new(@info[:user]).display_avatar 150).html_safe %> 
      </div>
    </div>
  </div>
</div>
<style>
input {
  width: 100%;
}
.user_infomation hr {
  margin: 0;
  margin-bottom: 10px;
  width: 80%;
}

.user_avatar {
  display: flex;
    justify-content: center;
}
</style>
