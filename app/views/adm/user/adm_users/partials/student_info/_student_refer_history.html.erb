<% refers = user.refer_friends %>
<div>
  <% if refers.blank? %>
    <p>Học sinh chưa gửi lời mời nào!</p>
  <% else %>
    <table id="refer_friend_tabel">
      <tr>
        <th><%= t("adm.Referral code")%></th>
        <th><%= t("adm.Parent's name")%></th>
        <th><%= t("adm.Phone")%></th>
        <th><%= t("adm.Refer date")%></th>
        <th><%= t("adm.Refer state") %></th>
      </tr>
      <% refers.each do |refer| %>
        <tr>
          <td><%= refer.code %></td>
          <td><%= refer.parent_name %></td>
          <td><%= refer.mobile %></td>
          <td><%= refer.created_at.strftime('%d.%m.%Y') %></td>
          <%= render "social_community/refer_friends/partials/refer_state", {refer: refer} %>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
