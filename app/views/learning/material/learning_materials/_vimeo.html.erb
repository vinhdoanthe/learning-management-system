<% if video_id.to_i != 0 %>
  <iframe  src="<%= Learning::Constant::Material::VIMEO_PLAYER_PREFIX + video_id.to_s %>" frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
<% else %>
  <div class='video_has_thumbnail'>
    <% if video&.thumbnail_image&.attached? %>
      <%= image_tag video.thumbnail_image %>
    <% end %>
  </div>
  <div class='thumbnail_text'>
    <h3>Video đang trong quá trình phát triển</h3>
  </div>
<% end %>

<style>
#play_video_box  { 
  position: relative; 
  padding-bottom: 56.25%; 
  height: 0; 
  overflow: hidden; 
  max-width: 100%; 
  height: auto; 
} 
#play_video_box iframe, #play_video_box  object, #play_video_box embed { 
  position: absolute; 
  top: 0; left: 0; 
  width: 100%; 
  height: 100%; 
}
.video_has_thumbnail {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #d8d8d8;
  opacity: 0.3;
}

.video_has_thumbnail img {
  width: 100%;
}

.thumbnail_text {
  margin: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.thumbnail_text h3{
  font-size: 22px !important;
  font-weight: 700;
}
</style>
