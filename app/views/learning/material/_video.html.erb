<% if @video_id.present? %>
	<div class="card">
		<div class="card-block">
			<ziggeo ziggeo-video='<%= @video_id %>' 
			 ziggeo-width="320"
		ziggeo-height="240" ziggeo-popup>
			</ziggeo>
		</div>
	</div>
<% else %>
	<div class="card">
		<div class="card-block">
			Chưa có video ôn tập
		</div>
	</div>
<% end %>
