<div class="sidebar">
  <div class="logopanel">
    <h1>
      <%= link_to '', root_path, class:"not-sidebar-collapsed-logo" %>
      <%= image_tag("global/images/logo-small.png",class:"response-logo-sidebar sidebar-collapsed-logo", style:"width:60px;height:60px;") %>
    </h1>
  </div>
  <div class="sidebar-inner">
    <div class="noti-avatar">
      <ul class="nav nav-sidebar nav-sidebar-edit m-b-0">
        <li class="nav-active">
          <a href="<%= root_path %>">
            <%= (User::Account::UserDecorator.new(current_user).display_avatar 80).html_safe %>
            <span class='public_profile' style="padding-top: 11px;">
                <label class="user_full_name_over"><%= current_user.op_faculty.full_name %></label>
                <p style="padding-left: 0px; text-align: left; text-transform: uppercase;">Level: <%= current_user.op_faculty.faculty_level %></p>
            </span>
          </a>
        </li>
      </ul>
    </div>
    
    <%= get_menus_teacher(request.original_fullpath).html_safe%>    

  </div>
</div>
