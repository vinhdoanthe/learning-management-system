<div class="sidebar">
  <div class="logopanel">
    <h1>
      <%= link_to '', root_path, class:"not-sidebar-collapsed-logo" %>
      <%= image_tag("global/images/logo-small.png",class:"response-logo-sidebar sidebar-collapsed-logo", style:"width:60px;height:60px;") %>
    </h1>    
  </div>
  <div class="sidebar-inner" id="sidebar">
    <div class="noti-avatar">
      <ul class="nav nav-sidebar nav-sidebar-edit m-b-0">
        <li class="nav-active menu_item">
          <input type="hidden" id="public_profile_id" value="<%= current_user.op_student.id %>" >
          <a id='root-path-avatar-link' href="<%= root_path %>">
            <%= User::Account::UserDecorator.new(current_user).display_avatar.html_safe %>
            <span class='public_profile'>
              <label  class="user_full_name_over"><%= current_user.op_student.full_name %></label>
              <p class="user_code" style="padding: 0; text-align: left">&nbsp<%= current_user.op_student.code %></p>
            </span>
            <%= User::Account::UserDecorator.new(current_user).display_avatar.html_safe %>
          </a>
          <%= link_to '<b class="color-5DC2A7 public_profile">Public Profile</b>'.html_safe , user_open_educat_op_students_public_profile_path(current_user.student_id), id: 'public_profile' %>
        </li>
      </ul>
    </div>    
    <%= get_menus_student(request.original_fullpath).html_safe%>    
  </div>
</div>
