<div class="page-content page-thin">
  <div class="panel panel-edits bg-232837">
    <div class="panel-heading">
      <div class="ph-text">
        <h2 class="color-fff text-transform">Lớp học của tôi</h2>
      </div>
    </div>
  </div>
  <div class="panel m-t--70">
    <div class="panel-content">
      <div class="row">
        <% @batches.each do |batch| %>
          <div class="col-md-6">
            <div class="scl-detail">
              <div class="scl-img">
                <%= batch.op_course.thumbnail.attached? ? image_tag(batch.op_course.thumbnail.variant(resize_to_limit: [800, 800])) : '' %>
                <% if stage_active?(batch.id) %>
                  <span class="scl-success">Đang học</span>
                <% else %>
                  <span class="scl-danger">Nghỉ học</span>
                <% end %>
              </div>
              <div class="scl-text">
                <div class="scl-left">
                  <label for=""><%= batch.op_course.name %></label>
                  <p>Mã lớp: <span><%= batch.code %></span></p>
                  <p>18:00 Thứ 7 hàng tuần Tại <span><%= batch.res_company.name %></span></p>
                </div>
                <div class="scl-right">
                  <ul>
                    <li><%= image_tag('global/images/laurel-wreath.png') %></li>
                    <li><%= image_tag('global/images/files-and-folders-2.png') %></li>
                    <li>
                      <% if stage_active?(batch.id) %>
                        <a href="<%= user_batch_detail_path(batch.id) %>" class="btn btn-default btn-embossed btn-edit bg-5DC2A7">
                          <%= image_tag('global/images/come-in.png') %>
                          Vào lớp
                        </a>
                      <% else %>
                        <a href="<%= user_batch_detail_path(batch.id) %>" class="btn btn-default btn-embossed btn-edit bg-505050">
                          <%= image_tag('global/images/come-in.png') %>
                          Xem lại
                        </a>
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>