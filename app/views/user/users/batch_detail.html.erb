<% content_for :javascript_includes do %>
  <%= javascript_include_tag "learning/course_description.js" %>
<% end %>
<div class="page-content page-thin">
  <div class="panel panel-edits bg-232837">
    <div class="panel-heading">
      <div class="ph-text">
        <h2 class="color-fff text-transform">Lớp học của tôi</h2>
      </div>
    </div>
  </div>
  <div class="panel m-t--70">
    <div class="panel-content">
      <a href="<%= user_my_class_path %>" class="PC-back">
        <%= image_tag('global/images/quaylai.svg') %>
        Quay lại
      </a>
      <ul class="nav nav-tabs nav-primary tab-menu">
        <li class="active"><a href="#tab2_1" data-toggle="tab">Thông tin lớp học</a></li>
        <li class=""><a href="#tab2_2" data-toggle="tab">Quá trình học tập</a></li>
      </ul>
      <div class="tab-content p-0 tab-all-content m-t-20">
        <div class="tab-pane fade active in" id="tab2_1">
          <div class="bo-table">
            <div class="form-content">
              <%= render 'user/shared/batch_info', {:batch => @batch} %>
              <%= render 'user/shared/batch_info_table', {:batch => @batch} %>
            </div>
          </div>

          <div class="bo-lession m-t-20" id='course_description'>
            <% op_course = @batch.op_course %>
            <% unless op_course.nil? %>
              <% course_description = op_course.course_description.first %>
              <% unless course_description.nil? %>
                <%= raw(course_description.description) %>
              <% end %>
            <% end %>
          </div>
        </div>
        <%= render 'user/shared/batch_student_progress', {:batch => @batch} %>
      </div>
    </div>
  </div>
</div>
