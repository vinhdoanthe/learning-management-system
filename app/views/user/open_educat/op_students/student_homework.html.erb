<div class="page-content page-thin">
  <div class="panel panel-edits bg-232837">
    <div class="panel-heading">
      <div class="ph-text">
        <h2 class="color-fff text-transform">Bài tập & ôn bài</h2>
      </div>
    </div>
  </div>
  <div class="panel m-t--70">

    <div class="panel-content">
      <%= link_to image_tag('global/images/quaylai.svg').html_safe + " Quay lại", :back, class: 'PC-back', id: 'student_homework_back' %>
      <ul class="nav nav-tabs nav-primary tab-menu">
        <li class="active"><a href="#homework_tab1" data-toggle="tab">Bài tập về nhà</a></li>
        <li class=""><a id="student_homework_videos" href="#homework_tab2_new" data-toggle="tab">Ôn bài</a></li>
      </ul>
      <div class="tab-content p-0 tab-all-content m-t-20">
        <div class="tab-pane fade active in" id='homework_tab1'>

          <div class="table-responsive bo-table">
            <div class="filter-box FlowupLabels" id='formBody'>
              <div class="row">
                <div class="col-md-4">
                  <label class="filter-title student_course_title"></label>
                </div>
                <div class="col-md-3">
                  <div class='fl_wrap m-t-0'>
                    <label class='fl_label' for='rf_name'>Khóa học:</label>
                    <select class='fl_input' id='homework_course_selection'>
                      <% @courses.each do |course| %>
                        <% if course.id == @course.id %>
                          <option value="<%= course.id %>" selected><%= course.name %></option>
                        <% else %>
                          <option value="<%= course.id %>"><%= course.name %></option>
                        <% end %>
                      <% end %>
                    </select>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class='fl_wrap m-t-0 populated'>
                    <label class='fl_label' for='rf_name'>Lớp học:</label>
                    <select class='fl_input' id="homework_batch_selection">
                      <% @batches.each do |batch| %>
                        <option value="<%= batch.id %>"><%= batch.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class='fl_wrap m-t-0 populated'>
                    <label class='fl_label' for='rf_name'>Học phần:</label>
                    <select class='fl_input' id="homework_subject_selection">
                      <% @subjects.each do |subject| %>
                        <option value="<%= subject.id %>"><%= subject.level %></option>
                      <% end %>
                      <option val="all">Tất cả</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <table class="table table-hover table-link" id="homework_session_table" remote='true'>
              <%= render 'user/open_educat/op_students/partials/table_homework_list', { sessions: @sessions, batch: @batch, session: @session, subject: @subject } %>
            </table>
          </div>
        </div>
        <!-- <div id="video_play_tab" > -->
        <div class="tab-pane fade" id='homework_tab2_new'> 
          <%= render 'user/open_educat/op_students/partials/homework_video', { sessions: @sessions, course: @course, subject: @subject, lesson: @lesson, session: @session, batch: @batch } %>
        </div>
        <!-- </div> -->
      </div>
    </div>
  </div>
</div>
<% content_for :javascript_includes do %>
  <%= javascript_include_tag "user/open_educat/op_students/homework.js" %>
<% end %>

