<div class="page-content page-thin">
  <div class="panel panel-edits bg-232837">
    <div class="panel-heading">
      <div class="ph-text">
        <h3 class="color-fff text-transform"><%= t('sidebar.timetable')%></h3>
      </div>
    </div>
  </div>
  <div class="panel m-t--70">
    <div class="panel-content">
      <%= render 'user/open_educat/shared/session/top_schedule', {:coming_soon_session => @session} %>
    </div>
  </div>
  <div class="panel">
    <div class="panel-content">
      <div class="table-responsive calendar-teach student_timetable" style="overflow-x: initial;">
        <div class="filter-box FlowupLabels line-D7DFE9 m-b-20" id='formBody'>
          <div class="row">
            <div class="col-md-3">
              <label class="filter-title td-bold">Toàn bộ <span class="color-16BD56">Lớp học</span></label>
            </div>
            <div class="timetable_date">
                <a class="cd-left schedule_time_previous">
                  <i class="fa fa-caret-square-o-left"></i>
                </a>
              <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                <i class="fa fa-calendar"></i>&nbsp;
                <span></span>
                <div style='position: relative; bottom: -5px;'>
                  <i class="fa fa-caret-down"></i>
                  <i style="position: absolute; top: -5px; right: 0px;" class="fa fa-caret-up"></i>
                </div>
            </div>
                <a class="cd-right schedule_time_next">
                  <i class="fa fa-caret-square-o-right i-pdr-0"></i>
                  </a>
              </div>
            </div>
          </div>

          <table class="table table-bordered">
            <thead>
              <tr class='day_in_week'>
                <th width="140" class="text-right bg-5DC2A7 color-fff td-bold font-bold" style="border: 0; text-align: center; text-transform: uppercase;"><%= t('datetime.prompts.range_time')%></th>
                <th class="text-center thu_2 td-bold border-r-b-0" width="155">Thứ 2<br /><span class="schedule-date-text">23/12/2019</span></th>
                <th class="text-center thu_3 td-bold border-r-l-b-0" width="155">Thứ 3<br /><span>24/12/2019</span></th>
                <th class="text-center thu_4 td-bold border-r-l-b-0" width="155">Thứ 4<br /><span>25/12/2019</span></th>
                <th class="text-center thu_5 td-bold border-r-l-b-0" width="155">Thứ 5<br /><span>26/12/2019</span></th>
                <th class="text-center thu_6 td-bold border-r-l-b-0" width="155">Thứ 6<br /><span>27/12/2019</span></th>
                <th class="text-center thu_7 td-bold border-r-l-b-0" width="155">Thứ 7<br /><span>28/12/2019</span></th>
                <th class="text-center thu_8 td-bold border-l-b-0" width="155">Chủ nhật<br /><span>29/12/2019</span></th>
              </tr>
            </thead>
            <tbody id='schedule_table'>
              <tr class='s1'>
                <td rowspan="2" align="center" class="bg-FFC400 color-fff font-bold td-bold" style="border: 0">
                  <span class="transfor_rotate_-90" style="display: inline-block;padding: 15px 0;letter-spacing: 2px; text-transform: uppercase; font-size: 14px; font-weight: 700"><%= t('datetime.morning') %></span>
                </td>
              </tr>
              <tr class='s2'>
              </tr>
              <tr class='c1 bg-f6f6f6'>
                <td rowspan="2" align="center" class="bg-F0B800 color-fff font-bold td-bold" style="border: 0">
                  <span class="transfor_rotate_-90" style="display: inline-block;padding: 15px 0;letter-spacing: 2px; text-transform: uppercase; font-size: 14px; font-weight: 700"><%= t('datetime.afternoon') %></span>
                </td>
              </tr>
              <tr class='c2 bg-f6f6f6'>
              </tr>
              <tr class='t1 bg-eaeaea'>
                <td rowspan="2" align="center" class="bg-D4A300 color-fff font-bold td-bold" style="border: 0">
                  <span class="transfor_rotate_-90" style="display: inline-block;padding: 15px 0;letter-spacing: 2px; text-transform: uppercase; font-size: 14px; font-weight: 700;"><%= t('datetime.night') %></span>
                </td>
              </tr>
              <tr class='t2 bg-eaeaea'>
              </tr>
            </tbody>
          </table>
          <div class="ct-note">
            <div class="row">
              <div class="col-sm-10">
                <div class="ct-left">
                  <ul>
                    <li><span class="bg-5DC2A7 td-bold text-uppercase font-bold"></span><%= t('learning.class_online')%></li>
                    <li><span class="bg-EB9138 td-bold text-uppercase font-bold"></span><%= t('learning.class_in_center')%></li>
                  </ul>
                </div>
              </div>
              <div class="col-sm-2 ct-right">
                <div class="ct-right">
                  <ul>
                    <li style="text-transform:unset;padding-right: 1px;"><span class='td-bold bg-F16357'></span><%= t('learning.class_cancel')%></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .choose-date-next-prev {
      border: 1px solid #DADAEE;
      border-radius: 5px;
      margin: 0;
      padding-top: 20px;
      padding-right: 12px;
      padding-left: 12px;
      padding-bottom: 12px;
      height: 60px;
      max-height: 60px;
    }

    .choose-month-dropdown {
      padding-top: 0px !important;
      padding-bottom: 0px !important;
      padding-right: 0px !important;
      padding-left: 12px !important;
    }

    .td-bold {
      font-family: 'Quicksand', sans-serif;
      text-transform: uppercase;
      font-weight: lighter;
    }

    .FlowupLabels .fl_wrap {
      width: 100%;
      height: 60px;
      margin: 0 auto 12px auto;
      display: block;
      position: relative;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      border: 1px solid #DADAEE;
      border-radius: 5px;
    }

    .FlowupLabels .fl_input {
      background: none;
      border: none;
      border-radius: 0;
      font-size: 14px;
      line-height: 22px;
      padding: 20px 0 0 12px;
      color: #5b5b5b;
      font-weight: lighter;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      z-index: 2;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
    }

    .i-pdr-0 {
      padding-right: 0px !important;
    }
    .schedule_time_next {
      position: absolute;
      right: -30px;
      font-size: 20px;
      top: 50%;
      transform: translateY(-50%);
      color: #5f5f5f;
    }
    .schedule_time_previous {
      position: absolute;
      left: -30px;
      font-size: 20px;
      top: 50%;
      transform: translateY(-50%);
      color: #5f5f5f;
    }
    #reportrange {
      border: 1px solid #DADAEE;
      border-radius: 5px;
      margin: 0;
      padding-top: 20px;
      padding-right: 12px;
      padding-left: 12px;
      padding-bottom: 12px;
      height: 60px;
      max-height: 60px;
      display: flex;
      align-items: center;
    }

    #reportrange span{
      font-size: 14px;
      font-weight: 700;
      color: black;
    }

    .timetable_date {
      display: inline-block;
      position: relative;
      float: right;
      margin-right: 50px;
      margin-bottom: 20px;
    }

    #reportrange i:first{
      margin-right: 20px;
    }

    #reportrange .fa-calendar {
      margin-right: 20px;
    }

    #reportrange .fa-caret-down {
      margin-left: 20px;
    }
    .daterangepicker table.table-condensed tbody:hover tr:hover {
      background-color:#ecf5f8; 
    }
    .daterangepicker table.table-condensed tbody:hover tr:hover td{
      background-color: #ecf5f8 !important;
    }
    .daterangepicker table.table-condensed tbody:hover tr:hover td:hover{
      background-color: white !important;
    }
  </style>
<%= javascript_include_tag( 'user/open_educat/shared/timetable.js' ) %>
