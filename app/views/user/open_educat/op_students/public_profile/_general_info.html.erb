    </li>
    <li>
      <span>
        <%= image_tag('global/images/profile4.png') %>
      </span>
      <p><%= t('public_profile.achievements') %>: <b><%= t('public_profile.no_achievements') %></b></p>
    </li>
    <li>
      <span>
        <%= image_tag('global/images/profile3.png') %>
      </span>
      <p><%= t('public_profile.gender') %>: <b><%= User::OpenEducat::OpStudentDecorator.new(op_student).display_gender %></b></p>
    </li>
    <li>
      <span>
        <%= image_tag('global/images/profile5.png') %>
      </span>
      <p><%= t('public_profile.address') %>: <b><%= op_student.vattr_parent_address %></b></p>
