<div class="box-add">
  <ul>
    <li>
      <span>
        <%= image_tag('global/images/profile2.png') %>
      </span>
      <p><b class="color-F16357"><%= number_with_delimiter(public_user.star.to_i, :delimiter => '.') %></b> <%= t('reward.star') %></p>
    </li>
    <li>
      <span>
        <%= image_tag('global/images/profile1.png') %>
      </span>
