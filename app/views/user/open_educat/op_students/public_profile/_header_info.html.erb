<div class="bp-header" id='publicProfileHeaderInfo'>
  <ul class="row bh-step">
    <li class="col-md-3">
      <div class="bhs-detail">
        <span>
          <%= image_tag('global/images/star.png') %>
        </span>
        <p>
        <b><%= number_with_delimiter(public_user.star.to_i, :delimiter => '.') %></b> ĐIỂM<br/>
        <b><%= number_with_delimiter(public_user.coin.to_i, :delimiter => '.') %></b> TEKY ĐỒNG
        </p>
      </div>
    </li>
    <li class="col-md-3">
      <div class="bhs-detail">
        <span>
          <%= image_tag('global/images/icon-BTVN.png') %>
        </span>
        <p>

        <% user = User::Account::User.where(student_id: @op_student.id).first %>
        <b><%= count_homework user %></b> BÀI TẬP VỀ NHÀ<br/>
        <b><%= count_sc_project %></b> DỰ ÁN ĐÃ PHÁT TRIỂN
        </p>
      </div>
    </li>
    <li class="col-md-3">
      <div class="bhs-detail">
        <span>
          <%= image_tag('global/images/laurel-wreath.png') %>
        </span>
        <p class="t-uppercase">
        <b><%= count_achievement %></b> <%= t('public_profile.achievements') %><br/>
        <b><%= count_badge %></b> <%= t('public_profile.badges') %>
        </p>
      </div>
    </li>
    <li class="col-md-3">
      <div class="bhs-detail">
        <span>
          <%= image_tag('global/images/prize.png') %>
        </span>
        <p>
        <b><%= count_redeem %></b> QUÀ TẶNG<br/>
        <br/>
        </p>
      </div>
    </li>
  </ul>
</div>
