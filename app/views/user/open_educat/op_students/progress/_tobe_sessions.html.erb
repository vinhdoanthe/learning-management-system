<div class="table-responsive bo-table m-b-20">
  <% if !tobe_sessions.nil? and !tobe_sessions.empty? %>
    <table class="table  table-link" style="margin-bottom: 0">
      <colgroup>
        <col width='90'>
        <col width='140'>
        <col>
      </colgroup>
      <thead class="border-bottom-line-2">
        <tr>
          <th colspan='3' class="p-l-0">
            <h3><%= t('my_class.detail.progress.coming_html') %></h3>
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% tobe_sessions.each do |tobe_session| %>
          <% s_tobe = tobe_session[:session] %>
          <% l_tobe = tobe_session[:lesson] %>
          <% style_display = (s_tobe.subject_id == active_subject)? "" : "style=display:none;" %>
          <tr class="student_subject_level subject_level_<%s_tobe.op_subject.id.to_s %>" <%= style_display %>>
            <%= render 'user/open_educat/op_students/progress/session/tobe_session_student', {:session => s_tobe, :lesson => l_tobe} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="fc-header border-bottom-line-2">
      <h3 class="p-l-0"><%= t('my_class.detail.progress.coming_html') %></h3>
    </div>
    <div class="p-l-0 p-t-10"><%= t('my_class.detail.progress.no_lesson') %></div>
  <% end %>
</div>
