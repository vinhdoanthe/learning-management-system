$('#table_loading_homework').hide();
$("#homework_session_table").show();
<% if errors.present? %>
  $('#homework_session_table').hide();
  $('.no_lesson_div').show();

 <% else %>
    $('.no_lesson_div').hide();
    $('.student_course_title').html('<%= course.name %>');
    $('#homework_session_table').show();
    <% if batches.present? %>
      $("#homework_batch_selection").html('<%= escape_javascript( render partial: 'user/open_educat/op_students/partials/homework_selection', locals: { datas: batches } ) %>');
    <% end %>
    <% if subjects.present? %>
      $("#homework_subject_selection").html('<%= escape_javascript(render partial: 'user/open_educat/op_students/partials/homework_selection', locals: { datas: subjects } ) %>');
    <% end %>
  $("#homework_session_table").html('<%= escape_javascript(render partial: 'user/open_educat/op_students/partials/table_homework_list', locals: { sessions: sessions, batch: batch, session: session, subject: subject } ) %>');
  $('#homework_course_selection').val("<%= course.id %>");
  $('#homework_batch_selection').val("<%= batch.id %>");
  $('#homework_subject_selection').val("<%= subject.id %>");

  $(document).ready(function(){
    $('#homework_tab2_new').html('<%= escape_javascript(render partial: 'user/open_educat/op_students/partials/videos_tab', locals: { sessions: sessions, course: course, subject: subject, lesson: lesson, batch: batch, session: session, subjects: subjects } ) %> ');
  })
<% end %>
