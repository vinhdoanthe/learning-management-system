<% if !photos.blank? %>
  <div class="modal-dialog" role="document" style='max-width: 100%; width: 100%; height: 100%; margin: 0;'>
    <div class="modal-content" style="width: 100%">
      <div class="modal-body">
        <button type="button" class="close close-modal" style="color: white; margin-top: 20px; margin-right: 20px; opacity: 1" data-dismiss="modal">&times;</button>
        <div id="done-session-photo-review" class="fotorama"  data-allowfullscreen="true" data-nav="thumbs" data-fit="scaledown" data-thumbwidth="100" data-arrows="always" data-trackpad='true' data-keyboard="true"  data-click="true" data-swipe="true" data-hash="true" data-width='100%' data-height='100%'>
          <% photos.each do |photo| %>
            <a href="<%= url_for(photo) %>"></a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="modal-dialog" role="document" style=''>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal" data-dismiss="modal" style='color: black'>&times;</button>
      </div>
      <div class="modal-body">
        <div>
          <h4 style="text-align: center;">Hình ảnh lớp học sẽ được cập nhật trong thời gian sớm nhất!</h4>
        </div>
      </div>
    </div>
  </div>
<% end %>

<style>
.close-modal {
  position: absolute;
  font-size: 40px;
  font-weight: 700;
  right: 20px;
  z-index: 10;
  color: white;
}
  .close-modal:hover {
    color: white;
  }
  .fotorama__fullscreen-icon {
    display: none;
  }
  .fotorama__nav-wrap {
    background-color: black;
  }
  .fotorama__wrap--slide .fotorama__stage__frame {
    background-color: black;
  }
</style>
<script>
  $(document).ready(function(){
    $('#done-session-photo-review').fotorama();
  })
</script>
