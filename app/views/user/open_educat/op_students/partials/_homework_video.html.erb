<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'social_community/question_answer/session_qa_area.js' %>
  <%= javascript_include_tag ('swiper.min.js') %>
<% end %>
<% content_for :stylesheet_includes do %>
  <%= stylesheet_link_tag ('swiper.min.css') %>
<% end %>
<% session_has_video_list = get_session_has_video sessions %>

<% unless session_has_video_list.present? %>
  <%= render 'user/open_educat/op_students/partials/no_homework_video' %>
<% else %>
  <div class="tab-content p-0 tab-all-content bo-table">
    <div class="tab-pane fade active in">
      <div class="fc-header" id="video_detail">
        <%= render 'user/open_educat/op_students/partials/video_detail', { course: course, subject: subject, lesson: lesson, session: session } %>
      </div>
      <input type='hidden' value='<%= session.id %>' name='active_session'>
      <input type='hidden' value='<%= subject.id %>' name='active_subject'>
      <input type='hidden' value='<%= batch.id %>' name='active_batch'>
      <div class="row">
        <div class="col-md-9">
          <div class="fc-video">
            <div class="fcv-big" style='height: 100%'>
              <div id='no_play_video' style='position: relative;display: none'>
                <%= image_tag 'no-video-placeholder.jpg' %>
              </div>
              <div id='play_video_box' >
              </div>
                <!-- <div class="fc-header video-detail" id="video_detail">
                  <%#= render 'user/open_educat/op_students/partials/video_detail', { course: course, subject: subject, lesson: lesson } %>
                </div> -->
                <div class="title-video">
                  <p style='text-transform: uppercase'>Ná»™i dung Video: <span id="video_description" style="font-weight: 500"><%= lesson.present? ? lesson.name : "" %></span></p>
                </div>
            </div>
          </div>
          <div>
            <div class="" style='display: block' id='swiper-video-list'>
              <div class="swiper-container homework_video_swiper">
                <div class="swiper-wrapper">
                  <% session_has_video_list.each_with_index do |s, index| %>
                    <% if s.id == session.id %>
                      <div class='swiper-slide active_video_slide' style='background: #ffffff'>
                      <input type='hidden' value='<%= index %>' id='active_video_slider'>
                        <%= render 'user/open_educat/op_students/partials/video_item', { session: session, current_session: s } %>
                      </div>
                    <% else %>
                      <div class='swiper-slide'>
                        <%= render 'user/open_educat/op_students/partials/video_item', { session: session, current_session: s } %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
                <!-- Add Arrows -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
              </div>
            </div>
          </div>
        </div>
        <% if lesson.present? %>
          <div class="col-md-3" id="video_homework_chat">
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<style>
.no_video_thumbnail {
  width: 100%;
  opacity: 0.5
}
.swiper-container {
  width: 100%;
  height: 100%;
  padding: 10px;
  background-color: #505050;
}
.swiper-slide {
  cursor: pointer; 
  text-align: center;
  font-size: 18px;
  background: #dcdcdc;
  border: 1px solid #D7DFE9 !important; 
  border-radius: 5px;
  padding-top: 5px;
  padding-bottom: 5px;
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.video-detail {
  padding-left: 10px;
}
#video_detail {
  margin-left: 20px;
  margin-bottom: 3px;
  padding-top: 20px;
  padding-bottom: 20px;
  border-bottom: 3px solid #D7DFE9;
}
</style>
