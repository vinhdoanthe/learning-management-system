<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'social_community/question_answer/session_qa_area.js' %>
<% end %>
<%= stylesheet_link_tag ('swiper.min.css') %>
<%= javascript_include_tag ('swiper.min.js') %>
<div class="tab-content p-0 tab-all-content">
  <div class="tab-pane fade active in">
    <div class="fc-header" id="video_detail">
      <%= render 'user/open_educat/op_students/partials/video_detail', { course: course, subject: subject, lesson: lesson } %>
    </div>
    <input type='hidden' value='<%= session.id %>' name='active_session'>
    <input type='hidden' value='<%= subject.id %>' name='active_subject'>
    <input type='hidden' value='<%= batch.id %>' name='active_batch'>
    <div class="row">
      <div class="col-md-9">
        <div class="fc-video">
          <div class="fcv-big" style='height: 100%'>
            <div id='no_play_video' style='position: relative;display: none'>
              <%= image_tag '/global/images/Logo-2.png', class: 'no_video_thumbnail' %>
              <h3 style='position: absolute; top: 40%; left: 30%; font-size: 25px; color: #5DC2A7 !important'> Chưa có video ôn bài!</h3>
            </div>
            <div id='play_video_box' >
            </div>
              <div class="fc-header" id="video_detail">
                <%= render 'user/open_educat/op_students/partials/video_detail', { course: course, subject: subject, lesson: lesson } %>
              </div>
              <div class="title-video">
                <p>Nội dung Video: <span id="video_description"><%= lesson.present? ? lesson.name : "" %></span></p>
              </div>
          </div>
        </div>
        <div >
          <div class="" style='display: block'>
            <div class="swiper-container">
              <div class="swiper-wrapper">
                <% (sessions.select{|s| s.state == Learning::Constant::Batch::Session::STATE_DONE && s.lession_id != nil}).each do |s| %>
                  <div class='swiper-slide'>
                    <%= render 'user/open_educat/op_students/partials/video_item', { session: session, current_session: s } %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% if lesson.present? %>
        <div class="col-md-3" id="video_homework_chat">
          <%#= render 'social_community/question_answer/shared/qa_box', { session: session, lesson: lesson } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<style>
.no_video_thumbnail {
  width: 100%;
  opacity: 0.5
}
.swiper-container {
  width: 100%;
  height: 100%;
}
    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;

      /* Center slide text vertically */
      display: -webkit-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      -webkit-justify-content: center;
      justify-content: center;
      -webkit-box-align: center;
      -ms-flex-align: center;
      -webkit-align-items: center;
      align-items: center;
    }
</style>
<script>
$(document).ready(function(){
  var swiper = new Swiper('.swiper-container', {
    slidesPerView: 5,
    spaceBetween: 10,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });
})
</script>
