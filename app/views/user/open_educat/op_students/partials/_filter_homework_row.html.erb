<div class="col-md-4  p-r-5 p-l-5">
  <label class="filter-title student_course_title"><%= course.name %></label>
</div>
<div class="col-md-3  p-r-5 p-l-5" id="origin_filter_course">
  <% unless courses.blank? %>
    <label class="custom-select-label"><%= t('learning.course')%></label>
    <select class="custom-select form-control-filters student_subject_filter" id="homework_course_selection">
      <% courses.each do |c| %>
        <% if c.id == course.id %>
          <option value="<%= c.id %>" selected><%= c.name %></option>
        <% else %>
          <option value="<%= c.id %>"><%= c.name %></option>
        <% end %>
      <% end %>       
    </select>

  <% else %>
    <div class='fl_wrap m-t-0 batch-populated populated'>
      <label class='fl_label' for='rf_name'><%= t('learning.batch.name') %>:</label>
      <p class="fl_input"></p>
    </div>
  <% end %>
</div>
<div class="col-md-3  p-r-5 p-l-5" id="origin_filter_batch">
  <% unless batches.blank? %>
    <label class="custom-select-label"><%= t('learning.batch.name')%></label>
    <select class="custom-select form-control-filters student_subject_filter" id="homework_batch_selection">
      <% batches.each do |b| %>
        <% if b.id == batch.id %>
          <option value="<%= b.id %>" selected><%= b.name %></option>
        <% else %>
          <option value="<%= b.id %>"><%= b.name %></option>
        <% end %>
      <% end %>        
    </select>

  <% else %>
    <div class='fl_wrap m-t-0 batch-populated populated'>
      <label class='fl_label' for='rf_name'><%= t('learning.batch.name') %>:</label>
      <p class="fl_input"></p>
    </div>
  <% end %>
</div>
<div class="col-md-2  p-r-5 p-l-5">                    
  <% unless subjects.blank? %>
    <label class="custom-select-label"><%= t('learning.subject')%></label>
    <select class="custom-select form-control-filters student_subject_filter" id="homework_subject_selection">
      <% subjects.each do |s| %>
        <option value="<%= s.id %>" <%= s.id == subject.id ? 'selected':'' %>><%= s.level %></option>
      <% end %>        
    </select>
  <% else %>
    <div class='fl_wrap m-t-0 batch-populated populated'>
      <label class='fl_label' for='rf_name'><%= t('learning.subject') %></label>
      <p class="fl_input"></p>
    </div>
  <% end %>
</div>
