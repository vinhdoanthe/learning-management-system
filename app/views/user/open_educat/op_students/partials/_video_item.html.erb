<div class="video_item" style="position: relative;">
  <input type='hidden' value='<%= current_session.id %>'>
  <% if current_session.id == session.id %>
    <div class='thumbnail_layer' style='cursor: pointer; position: absolute; width: 100%; height: 100%'>
      <input name='change_video' type='hidden' value='<%= current_session.id %>'>
    </div>
  <% else %>
    <div class='thumbnail_layer' title="<%= current_session.op_lession.present? ? current_session.op_lession.name : current_session.name %>" style='cursor: pointer; position: absolute; width: 100%; height: 100%'>
      <input name='change_video' type='hidden' value='<%= current_session.id %>'>
    </div>
  <% end %>
  <img style="max-height: 90px; width: 100%" src = "<%= get_video_thumbnail(current_session) %>">
</div>
