<div class="video_item" style="position: relative; width: 100%">
  <input type='hidden' value='<%= current_session.id %>'>
  <% if current_session.id == session.id %>
    <div class='thumbnail_layer <%= 'lock_layer' if session.state != 'done' %>' style='cursor: pointer; position: absolute; width: 100%; height: 100%; background-color: black; opacity: 0'>
      <input name='change_video' type='hidden' value='<%= current_session.id %>'>
    </div>
  <% else %>
    <div class='thumbnail_layer <%= 'lock_layer' if session.state != 'done' %>' title="<%= current_session.op_lession.present? ? current_session.op_lession.name : current_session.name %>" style='cursor: pointer; position: absolute; width: 100%; height: 100%; background-color: black; opacity: 0.7'>
      <input name='change_video' type='hidden' value='<%= current_session.id %>'>
    </div>
  <% end %>
  <div style="background-image: url('<%= get_video_thumbnail(current_session) %>'); background-size: cover;" >
    <img style="height: 90px; width: 100%; opacity: 0" src = "<%= get_video_thumbnail(current_session) %>">
  </div>
</div>
