<div class="tab-pane active" id="home">
  <form id='formBody' class='FlowupLabels'>
    <div class="col-md-12 text-center">
      <%= link_to "Đổi mật khẩu", user_account_users_change_password_path, class: 'change-password' %>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.full_name') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' value="<%= teacher.full_name %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class='fl_wrap populated teacher_company'>
          <label class='fl_label' for='rf_name'><%= t('config.company') %>:</label>
          <div class='fl_input' style="margin-top: 5px;">
            <% (teacher_company_names teacher).each do |company| %>
              <span class='company_name'><%= company %></span>
            <% end %>
          </div>
        </div>
      </div>
      <!-- <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%#= t('config.full_name') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' value="<%#= teacher.full_name %>" readonly />
        </div>
      </div> -->
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.birthday') %>:</label>
          <input type="text" name="timepicker" class="b-datepicker fl_input bg-f2f2f2" id='rf_name' readonly value="<%= teacher.birth_date.strftime('%d/%m/%Y') %>">
        </div>
      </div>
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.gender') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' value="<%= teacher.gender %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.mobile') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' readonly value="<%= res_partner.phone || res_partner.mobile if res_partner.present? %>">
        </div>
      </div>
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.address') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' readonly value="<%= res_partner.street if res_partner.present? %>"/>
        </div>
      </div>
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.district') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' readonly value="<%= res_partner.street2 if res_partner.present? %>" disabled="" />
        </div>
      </div>
      <div class="col-md-4">
        <div class='fl_wrap'>
          <label class='fl_label' for='rf_name'><%= t('config.nationality') %>:</label>
          <input class='fl_input bg-f2f2f2' type='text' id='rf_name' readonly value="<%= (res_partner.res_country ? res_partner.res_country.name : 'None') if res_partner.present? %>" disabled="" />
        </div>
      </div>
    </div>
  </form>
</div>
<style>
.company_name {
    border: none;
    background-color: #6D7278;
    border-radius: 10px;
    padding: 0 10px;
    color: white;
    font-weight: 600;
}
</style>
  <script>
    $(document).ready(function(){
      $('.teacher_company').addClass('populated');
    })
  </script>
