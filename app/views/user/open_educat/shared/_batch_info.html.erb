<div class="fc-header">
  <h3><span class="color-F16357">LỚP HỌC:</span> <%= batch.op_course.name %></h3>
</div>
<div class="box-progress">
  <div class="row">
    <div class="col-md-6">
      <ul>
        <li>
          <%= image_tag('global/images/qr-code.png') %>
          <p><span class="span-text">Mã lớp học: </span><%= batch.code %></p></li>
        <li>
          <%= image_tag('global/images/calendar-4.png') %>
          <p><span class="span-text">Thời gian học: </span><%= batch.start_date.strftime('%d/%m/%Y') %>
        đến <%= batch.end_date.strftime('%d/%m/%Y') %></p></li>
        <li>
          <%= image_tag('global/images/clock.png') %>
          <% time_line = batch_timeline batch %> 

          <p style="display: inline-block"><span class="span-text">Lịch học: </span>
          <% time_line.each_with_index do |time, i| %>
            <% if time_line.length - i != 1 %>
              <%= time.strftime("%H:%M") + " " + (get_week_day time.strftime("%A")) + "; "%>
            <% else %>
              <%= time.strftime("%H:%M") + " " + (get_week_day time.strftime("%A")) + " "%>
            <% end %>
          <% end %>
          </p> hàng tuần
        </li>
        <li>
          <%= image_tag('global/images/professor.png') %>
          <p><span class="span-text">Giảng viên: </span>
          <% if current_user.is_student? %>
            <a href=""><%= faculty_names.join(', ') %></a>
          <% elsif current_user.is_teacher? %>
            <a href=""><%= faculty.full_name %></a>
          <% end %>
          </p>
        </li>
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        <li>
          <%= image_tag('global/images/Combined-Shape.png') %>
          <p><span class="span-text">Môn học: </span><%= course_name %></p></li>
        <li>
          <%= image_tag('global/images/steps.png') %>
          <p id="subject_id_span">
          <span class="span-text">Học phần: </span>
          <% if current_user.is_student? %>
            <% unless batch_subjects.blank? %>
              <% batch_subjects.each do |subject| %>
                <% if done_subjects.include?(subject[0]) %>
                  <span class="label-course label label-default" style="background: #5DC2A7;">
                    <%= subject[1] %>
                  </span>
                <% else %>
                  <span class="label-course label label-default">
                    <%= subject[1] %>
                  </span>
                <% end %>
              <% end %>
            <% end %>
          <% elsif current_user.is_teacher? %>
            <% levels = list_teacher_subject_level(batch.id) %>
            <% unless levels.blank? %>
              <% levels.each do |level| %>
                <% if level[0] == @current_subject_id %>
                  <span class="label-course label label-default subject_id active">
                    <input type='hidden' name='subject_id' value="<%= level[0] %>" >
                    <%= level[1] %>
                  </span>
                <% else %>
                  <span class="label-course label label-default subject_id">
                    <input type='hidden' name='subject_id' value="<%= level[0] %>" >
                    <%= level[1] %>
                  </span>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
          </p>
        </li>
        <li>
          <%= image_tag('global/images/steps.png') %>
          <p><span class='span-text'>Buổi học: </span> <%= session_count %>
          </p>
        </li>
        <li>
          <%= image_tag('global/images/group-of-students.png') %>
          <p>
          <% batch_type = get_batch_type(batch) %>
          <span class="span-text">Loại lớp học: </span><%= batch_type %>
          </p>
        </li>
        <li>
          <%= image_tag('global/images/hotel.png') %>
          <p>
          <span class="span-text">Trung tâm: </span><a href=""><%= company_name %></a>
          <% unless classroom_name.blank? %>
            <span class='span-text'>| (Phòng học: </span><a href=""><%= classroom_name %> </a> <span class='span-text'>)</span>
          </p>
        <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
