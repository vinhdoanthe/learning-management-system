<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title" id="myModalLabel">Sản phẩm: <span class="color-16BD56"><%= project.name %></span> </h4>
    </div>
    <div class="modal-body student_project_detail_modal">
      <div class="modal-news">
        <div class='panel-content'>
          <ul>
            <li>Họ tên: <span><%= student.full_name %></span></li>
            <li>Khóa học: <span><%= course.name %></span></li>
            <li>Lớp học: <span><%= batch.name %></span></li>
            <li>Cơ sở: <span><%= company_name %></span></li>
          </ul>
        </div>
        <div class="panel-content">
          <div class="box-product" >
            <div class="fc-header" style='margin: 15px 0 15px 0'>
              <h3 style="margin: 0 !important">Mô tả sản phẩm</h3>
            </div>
            <div class="project_description">
              <p><%= project.description %></p>
            </div>
          </div>
        </div>
        <% if project.introduction_video.present? %>
          <div class="panel-content">
            <div class="box-product" >
              <div class="fc-header" style='margin: 15px 0 15px 0'>
                <h3 style="margin: 0 !important">Giới thiệu sản phẩm</h3>
              </div>
              <div class="project_intro">
                <%= project.introduction_video.html_safe %>
              </div>
            </div>
          </div>
        <% end %>
        <% if project.presentation.present? %>
          <div class="panel-content">
            <div class="box-product" >
              <div class="fc-header" style='margin: 15px 0 15px 0'>
                <h3 style="margin: 0 !important">Slide sản phẩm</h3>
              </div>
              <div class="project_intro">
                <%= project.presentation.html_safe %>
              </div>
            </div>
          </div>
        <% end %>
        <% if project.project_show_video.present? %>
          <div class="panel-content">
            <div class="box-product" >
              <div class="fc-header" style='margin: 15px 0 15px 0'>
                <h3 style="margin: 0 !important">Chi tiết sản phẩm</h3>
              </div>
              <div class="project_intro">
                <%= project.project_show_video.html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="box-product" >
        <div id="student_project_feed">
        </div>
      </div>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
<script>
  $(document).ready(function(){
    function getReactionsAndComments(post_id){
    $.ajax({
      method: 'GET',
      url: '/social_community/feed/get_reactions_and_comments?post_id=' + post_id,
      dataType: 'script'
    })
  }

    post_id = <%= project.sc_post.id %>
    getReactionsAndComments(post_id)
  })
</script>
<style>
  .student_project_detail_modal.panel-content{
     padding: 0;
}
    .student_project_detail_modal iframe {
      width: 100%;
        height: -webkit-fill-available;
    }
</style>
