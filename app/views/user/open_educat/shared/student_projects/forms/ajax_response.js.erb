$(document).ready(function(){
  res = JSON.parse('<%= raw(result.to_json) %>');
  alert(res.message);
  <% if result[:type] == 'success' %>
    $('.progress').html('<div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%"><span style="font-weight: 700">SUCCESS</span></div>');
    $('.close-modal').trigger('click');
    $('.modal-backdrop').remove();
  <% else %>
      $('.progress').html('<div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%"><span style="font-weight: 700">ERROR</span></div>');
  <% end %>
  display_response_noti(res);
})
