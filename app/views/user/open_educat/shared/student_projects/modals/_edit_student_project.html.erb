<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Edit sản phẩm của học sinh</h4>
    </div>
    <div class="modal-body">
      <div id="edit_video_infomation">
        <div class='row' id="edit_student_project_upload">
          <div class='col-md-3'>
            <label>Học sinh <span style="color: red">*</span></label>
          </div>
          <div class='col-md-8'>
            <select class='fl_input' id='edit_upload_project_student'>
              <% all_student.each do |st| %>
                <% if student.id == st[0] %>
                  <option selected value="<%= st[0] %>"><%= st[1] %> </option>
                <% else %>
                  <option value="<%= st[0] %>"><%= st[1] %> </option>
                <% end %>
              <% end %>
            </select>
          </div>
        </div>
        <div class='row' id="edit_student_project_subject">
          <div class='col-md-3'>
            <label>Học phần <span style="color: red">*</span></label>
          </div>
          <div class="col-md-8">
            <select id="edit_upload_project_subject">
              <% subjects.each do |k, v| %>
                <option value="<%= k %>"><%= v %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="project_name row">
          <div class='col-md-3'>
            <label>Tên sản phẩm <span style='color: red'>*</span></label>
          </div>
          <div class='col-md-8'>
            <input style='width: 100%' placeholder="Tên sản phẩm" value="<%= project.name %>" name="project_name" type="text"></input>
          </div>
        </div>
        <div class="project_description row">
          <div class='col-md-3'>
            <label>Mô tả sản phẩm </label>
          </div>
          <div class='col-md-8'>
            <textarea style='width: 100%' name='project_description' placeholder="Mô tả về sản phẩm" rows='5'><%= project.description %></textarea>
          </div>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button data-dismiss="modal" data-project="<%= project.id %>" type="button" class="btn btn-primary" style="background-color: #5DC2A7;" id="edit_project_confirm">Edit video</button>
    </div>
  </div>
</div>
<style>
#edit_upload_project_subject:hover {
  -webkit-appearance: auto;
}

#edit_upload_project_subject {
  width: 100% !important;
  margin: 10px 0;
  padding: 5px 1px;
}
#edit_upload_project_student{
  padding: 5px 1px;
}
.project_name{ margin-bottom: 10px }
</style>
<script>
  $('#edit_project_confirm').on('click', function(){
    div = $('#editStudentProjectDetail')
    project_id = $(this).data('project')
    name = div.find('input[name="project_name"]').val()
    description = div.find('textarea[name="project_description"]').val()
    student_id = $('#edit_upload_project_student').val()
    subject_id = $("#edit_upload_project_subject").val()
    data = { name: name, description: description, subject_id: subject_id, student_id: student_id, project_id: project_id }
    $.ajax({
      method: 'POST',
      url: '/social_community/update_student_project',
      data: data,
      sucess: function(res){
        display_noti(res)
      }
    })
  })
</script>
