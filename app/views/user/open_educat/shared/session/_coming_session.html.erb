<div class="table-responsive bo-table" style="padding-left: 38px !important;">
  <div class="fc-header b-0">
    <h3 class="pull-left p-t-10">Buổi học <span class="color-F16357">Sắp diễn ra</span></h3>
    <ul class="list-modal">
      <li>
        <button type="submit" class="btn btn-primary btn-embossed height-auto btn-fix" data-toggle="modal" data-target="#study_guide">
          <img src="/global/images/laptop.png"> 
          Hướng dẫn cài đặt ứng dụng và<br/>học trực tuyến trên máy tính
        </button>
      </li>
    </ul>
    <span class="comming">COMMING</span>
  </div>
  <table class="table m-b-0">
    <tbody>
      <tr>
        <td>
          <% if !coming_soon_session.nil? and !coming_soon_session.blank? %>
            <p><strong><%= coming_soon_session.op_subject.name %></strong></p>
            <% start = coming_soon_session.start_datetime %>
          <% else %>
            <div><strong>Đã kết thúc</strong></div>
            <% start = 0 %>
          <% end %>
        </td>
        <td align="right">
          <% if !coming_soon_session.nil? and !coming_soon_session.blank? %>
            <p class="text-right"><b><%= start.strftime('%H:%M') %></b>
            đến <b><%= coming_soon_session.end_datetime.strftime('%H:%M') %></b> | <b><%= (get_week_day start.strftime('%A')) + ', ' + start.day.to_s + '/' + start.month.to_s + '/' + start.year.to_s %></b>
            </p>
          <% end %> 
        </td>
        <td width="135">
          <div id="clockdiv">
            <div>
              <span class="hours"></span>
            </div>
            <div>
              <span class="minutes"></span>
            </div>
            <div>
              <span class="seconds"></span>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="modal fade" id="study_guide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Hướng dẫn cài đặt</h4>
      </div>
      <div class="modal-body">
        <iframe src="https://drive.google.com/file/d/1Y-9zjG3P6e7qN_QOenH21Q9rFC9ln7xY/preview" width="100%" height="600"></iframe>
      </div>
      <div class="modal-footer  bg-D7DFE9">
        <button type="submit" class="btn btn-primary btn-embossed bg-5DC2A7" data-dismiss="modal">Đồng ý</button>
      </div>
    </div>
  </div>
</div>
<style>
.btn-fix{
  background: #fff !important;
  color: #000 !important;
  border: 1px solid rgba(0, 0, 0, 0.15) !important;
  position: relative;
  padding-left: 35px !important;
}
</style>
<%= javascript_tag "initializeClock('clockdiv', #{start.to_json.html_safe} );", "data-turbolinks-track" => true %>
