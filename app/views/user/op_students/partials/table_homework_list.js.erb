<% if errors.present? %>
    $('#homework_tab1').html("<%= escape_javascript(render partial: 'user/op_students/partials/no_batch' ) %>");

 <% else %>
    $("#homework_batch_selection").html("<%= escape_javascript(render partial: 'user/op_students/partials/homework_selection', locals: { datas: batches } ) %>");
    $("#homework_subject_selection").html("<%= escape_javascript(render partial: 'user/op_students/partials/homework_selection', locals: { datas: subjects } ) %>");
    $("#homework_session_table").html("<%= escape_javascript(render partial: 'user/open_educat/op_students/partials/table_homework_list', locals: { sessions: sessions, batch: batch } ) %>");
    $('#homework_course_selection').val("<%= course.id %>")
    $('#homework_batch_selection').val("<%= batch.id %>")
    $('#homework_subject_selection').val("<%= subject.id %>")
 <% end %>

  $('[data-toggle="tooltip"]').tooltip();
