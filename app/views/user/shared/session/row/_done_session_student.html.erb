<!--Local variable: done_session-->

<%= render 'user/shared/session/row/session_calendar_box', {:session => session} %>

<% lesson = session.op_lession %>
<td>
  <div class="photo-box">
    <span>
      <%= thumbnail_tag lesson %>
    </span>
  </div>
</td>
<td>
  <strong><%= lesson.nil? ? 'Đang cập nhật' : 'Bài ' + lesson.lession_number.to_s %></strong><br/>
  <%= lesson.nil? ? 'Đang cập nhật' : lesson.name %> <br/>
  <%= lesson.nil? ? 'Đang cập nhật' : sanitize(truncate(lesson.note, :length => 50)) %>
</td>
<td align="center">
  <% attendance_line = attendance_line(session.id, current_user.op_student.id) %>
  <% if attendance_line.nil? %>
    <%= image_tag('global/images/remove.png', style: 'width: 20px') %>
  <% else %>
    <%= image_tag('global/images/check.png', style: 'width: 20px') %>
  <% end %>
</td>
<td align="right">
  <a class='student_evaluate_view student_homework_watch_videos' href="/learning/show_video/<%= session.id %>?target=watch_video_box" data-remote="true" data-session="<%= session.id %>" title='Bài tập về nhà, Ôn bài'>
    <span>
      <%= image_tag('global/images/icon-BTVN.png', style: 'width: 20px;margin-right: 10px') %>
    </span>
  </a>
  <% if !attendance_line.nil? %>
    <a class='student_evaluate_view' href="/user/session_evaluation_content?session_id=<%= session.id %>" data-remote='true' data-toggle="modal" data-target="#session_evaluation_view" title='Nhận xét của giảng viên'>
      <span>
        <%= image_tag('global/images/icon-Comment.png', style: 'width: 20px;margin-right: 10px') %>
      </span>
    </a>
  <% else %>
    <a style='opacity: 0.2' title='Nhận xét của giảng viên'>
      <span>
        <%= image_tag('global/images/icon-Comment.png', style: 'width: 20px;margin-right: 10px') %>
      </span>
    </a>
  <% end %>
</td>
