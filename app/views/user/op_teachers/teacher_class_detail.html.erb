<div class="page-content page-thin">
    <div class="panel panel-edits bg-232837">
        <div class="panel-heading">

            <div class="ph-text">
                <h2 class="color-fff text-transform"><%= link_to 'Danh sách lớp học', user_teacher_class_path %></h2>
            </div>
        </div>
    </div>
    <div class="panel m-t--70">
        <div class="panel-content">
          <div class="bo-table">
            <%= render 'user/shared/batch_info', {:batch => @batch} %>
          </div>
          <div class="bo-table" style="margin-top: 30px">
            <div class="box-lession">
                <div class="row">
                    <div class="col-md-2">
                        <div class="bl-title text-right">
                            <label>Học phần <%= @subject.level %> </label>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="bl-content">
                            <ul id="session_time_table">
                            
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="m-t-20">
                <div class="redem-tab class-tab">
                    <!-- Nav tabs -->
                    <input type="hidden" id='batch_id' value="<%= @batch.id %>">
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active in" id="<%= 'buoi' + (@session_index + 1).to_s %>">
                            <div class="table-responsive">
                                <table class="table table-link">
                                    <tbody>
                                        <tr>
                                            <td width="90">
                                                <div class="calenda-box" id='calendar-box'>
                                                </div>
                                            </td>
                                            <td width="130" id='lesson_img'>
                                                <div class="photo-box">
                                                    <span><img src="" alt=""></span>
                                                </div>
                                            </td>
                                            <!-- TO DO -->
                                            <td id='lesson_title'>
                                                <strong><%= 'BÀI TODO' %></strong><br/>
                                                <%= @session.name %><br/>
                                                Kiến thức học được: TODO
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <hr>
                                <div class="table-responsive">
                                    <div class="fc-header clearfix">
                                        <div class="pull-left lesson_info">
                                        </div>
                                        <div class="fc-list-btn pull-right">
                                            <ul>
                                                <li><button type="button" class="btn btn-default btn-embossed">Học cụ</button></li>
                                                <li><button type="button" class="btn btn-default btn-embossed" id="teacher_checkin" data-toggle="modal" data-target="#modal_checkin">Check-in</button></li>
                                                <li><button type="button" class="btn btn-default btn-embossed" data-toggle="modal" data-target="#diemdanh">Điểm danh</button></li>
                                                <li><button type="button" class="btn btn-default btn-embossed" data-toggle="modal" data-target="#hoclieu">Học liệu</button></li>
                                                <li><button type="button" class="btn btn-default btn-embossed" data-toggle="modal" data-target="#thuonghocsinh">Thưởng</button></li>
                                                <li><button type="button" class="btn btn-default btn-embossed">Chụp ảnh</button></li>
                                            </ul>
                                        </div>
                                    </div>
                                        
                                </div>
                                <hr>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Mã học sinh</th>
                                                <th>Họ và tên</th>
                                                <th class="text-center">Điểm danh</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id='student_attendance'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
    </div>
  	<div class="footer">
        <div class="copyright">
            <p class="pull-left sm-pull-reset">
                <span>Copyright <span class="copyright">©</span> 2020 </span>
                <span>THEMES BACKEND TEKY. </span>
                <span>All rights reserved. </span>
            </p>
            <p class="pull-right sm-pull-reset">
                <span><a href="#" class="m-r-10">Support</a> | <a href="#" class="m-l-10 m-r-10">Terms of use</a> | <a href="#" class="m-l-10">Privacy Policy</a></span>
            </p>
        </div>
    </div>
    <div class="modal fade" id="modal_checkin" role="dialog">
        <div class="modal-dialog">
        
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Thông tin buổi học</h4>
            </div>
            <div class="modal-body">
              <table style="width: 100%">
                <tr>
                    <td><strong>Giáo viên: </strong></td>
                    <td class='teacher_id'>
                        <%= @session.op_faculty.full_name %>
                        <input type='hidden' name='teacher_id' value='<%= @session.op_faculty.id %>'>
                        </td>
                </tr>
                <tr>
                    <td><strong>Học phần: </strong></td>
                    <td class='checkin_subject'></td>
                </tr>
                <tr>
                    <td><strong>Buổi học: </strong>
                        <input type="hidden" name="checkin_session_id" value=''>
                    </td>
                    <td class='checkin_sesion'></td>
                </tr>
                <tr>
                    <td><strong>Trạng thái lớp học: </strong></td>
                    <td class="checkin_state"></td>
                </tr>
                <tr>
                    <td><strong>Thời gian bắt đầu: </strong></td>
                    <td class="checkin_start"></td>
                </tr>
                <tr>
                    <td><strong>Thời gian kết thúc: </strong></td>
                    <td class="checkin_end"></td>
                </tr>
              </table>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" id='teacher_checkin_confirm'>Check-in</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
          </div>
          
        </div>
      </div>
</div>