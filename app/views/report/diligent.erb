<div class="row">
  <div class="col-12">  
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
            <form name="report_filters" id="report_filters" method="post" class="form-inline">
              <i class="fas fa-chart-pie mr-1 text-success"></i>              
                  <div class="input-group input-group-sm">
                  <span class="input-group-append"><%= t('report.from')%></span>
                    <input type="text" name="frm_report[from_date]" placeholder="from date" class="form-control" autocomplete="false" value="<%= @frm_report[:from_date]%>"><%= t('report.to')%>
                    <input type="text" name="frm_report[to_date]" placeholder="to date" class="form-control" autocomplete="false" value="<%= @frm_report[:to_date]%>">
                    <span class="input-group-append">
                      <button type="submit" class="btn btn-default" id="btn_report_date_apply"><%= t('button.apply')%></button>
                    </span>
                  </div>
            </form>
        </h3>
      </div>
      <div class="card-body">
          <div class="embed-responsive embed-responsive-16by9">
            <canvas class="embed-responsive-item" id="reportDiligentMonthlyScale"></canvas>
          </div>
          <hr/>
          <div class="embed-responsive embed-responsive-16by9" style="min-height: 500px;">
            <canvas class="embed-responsive-item" id="reportDiligentMonthlyNumber"></canvas>
          </div>
      </div>    
    </div>
  </div>
</div>