<div class="page-content page-thin">
	<div class="panel panel-edits bg-232837" style="margin-bottom: 20px">
		<div class="panel-heading">
			<div class='title-div'>
				<div>
					<h3 class='claim-title'>Đề nghị, yêu cầu</h3>
				</div>
			</div>
		</div>
	</div>
	<% if @claims.present? %>
		<div class="panel m-t--70">
			<div class="panel-content">
				<div class="panel claim-list">
					<div class="table-responsive claim-list-table">
						<div class="fc-header">
							<h3 class="p-l-0">Danh sách <span class="color-16BD56">đề nghị, yêu cầu</span></h3>
						</div>
						<table class='table'>
							<thead>
								<tr class='claim_header'>
									<th>Tiêu đề</th>
									<th>Ngày tạo</th>
									<th>Trạng thái</th>
									<th>Ngày hoàn thành</th>
								</tr>
							</thead>
							<tbody>
								<% @claims.each do |claim| %>
									<tr class='show_claim_detail' data-toggle="modal" data-id="<%= claim.id %>" data-target="#modal_claim_detail">
										<td><%= claim.name %></td>
										<td><%= claim.create_date.strftime('%H:%M %d/%m/%Y') %></td>
										<td><%= @stage[claim.stage_id] %></td>
										<td><%= claim.date_deadline %></td>
									</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			<% end %>
			<div class='panel' style='margin-top: 20px'>
				<div class='create_new_claim'>
					<p>Bạn có yêu cầu, đề nghị muốn gửi tới Teky?<%= link_to 'Gửi yêu cầu, đề nghị', crm_claims_new_claim_path %></p>
				</div>
			</div>
			</div>
			<div class="modal" tabindex="-1" role="dialog" id="modal_claim_detail">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title claim_name">Chi tiết yêu cầu</h5>
							<button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body" id='claim-detail'>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
		</div>
</div>
<style>
.title-div{
	margin-top: 30px;
	text-align: left;
}
.close-modal {
	position: absolute;
	right: 15px;
	top: 15px;
	font-size: 25px;
}
.claim-list {
	margin-top: 20px;
}

.show_claim_detail td{
	padding: 15px !important;
}
.claim-title {
	margin-left: 25px !important;
	font-size: 15px !important;
	font-weight: 700;
	color: white;
}
.claim_header th{
	padding: 15px !important;
}
.create_new_claim {
	font-size: 15px;
	padding: 20px;
	padding-left: 35px;
}
.create_new_claim a {
	display: inline-block;
	margin-left: 10px;
	text-decoration: underline;
}
.claim-list-table{
	padding: 20px;
	padding-bottom: 0px;
}
.claim-list-table tbody tr:hover {
	background-color: #f5f5f5;
	cursor: pointer;
}
</style>
<script>
	$('.show_claim_detail').on('click', function(){
			id = $(this).data('id')
			$.ajax({
					method: 'GET',
					url: `/crm/claims/${ id }`,
					dataType: 'script'
				})
		})
</script>
