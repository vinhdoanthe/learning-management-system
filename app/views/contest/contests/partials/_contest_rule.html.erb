                  <div class="c-rules-item__title"><%= t('Contest.Content.Rule product description') %></div>
                </div>
                <div class="c-rules-item__row"><%= @contest.rule_product_description&.html_safe %></div>
                <div class="c-rules-item__row"><i class="icon48-desc"></i></div>
              </div>
            </li>
            <li>
              <div class="c-rules-item">
                <div class="c-rules-item__number"><img src="/contest/upload/number-3.svg" alt="1"></div>
                <div class="c-rules-item__row">
                  <div class="c-rules-item__title"><%= t('Contest.Menu.Submit_project') %></div>
                </div>
                <div class="c-rules-item__row"><%= @contest.rule_submission_entries&.html_safe %></div>
                <div class="c-rules-item__row"><i class="icon48-sent"></i></div>
              </div>
