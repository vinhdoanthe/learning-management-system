                  <div class="c-rules-item__title"><%= t('Contest.Attendance infomation') %></div>
                </div>
                <div class="c-rules-item__row"><%= @contest.rule_atendance_information&.html_safe %></div>
                <div class="c-rules-item__row"><i class="icon48-info"></i></div>
              </div>
            </li>
            <li>
              <div class="c-rules-item">
                <div class="c-rules-item__number"><img src="/contest/upload/number-2.svg" alt="1"></div>
