<% c_project = Contest::ContestProject.last %>
<% user = User::Account::User.where(id: c_project.user_id).first %>
<% student = user.op_student %>
<div class="c-winner-item">
  <div class="c-winner-item__thumb"><a href="product-detail.html"><img src="/contest/upload/winner_1.jpg" alt="image"></a></div>
  <div class="c-winner-item__content">
    <div class="c-winner-item__time"><span><%= c_project.created_at.strftime('%m') %></span>
      <label>Th√°ng<b>/<%= c_project.created_at.strftime("%Y") %></b></label>
    </div>
    <div class="c-winner-item__inside"><i class="icon-meday"></i>
      <div class="b-grid">
        <div class="b-grid__row">
          "Student of the month"
          <b class="h-text__underline"><%= student.res_company&.name %></b>
        </div>
        <div class="b-grid__img">
          <figure>
          <% if user.avatar.present? && user.avatar.avatar.present? %>
            <%= image_tag user.avatar.avatar %>
          <% else %>
            <img src='/contest/images/face-default.png'>
          <% end %>
          </figure>
        </div>
        <div class="b-grid__content">
          <div class="b-grid__row"><a class="b-grid__title" href="product-detail.html">Amazing Scratch Games | Program</a></div>
          <div class="b-grid__row"><span class="b-grid__author"><%= student.full_name %></span></div>
        </div>
      </div>
    </div>
    <div class="c-winner-item__count">
      <ul>
        <li><i class="icon16-like"></i><span><%= Contest::ContestCriterion.where(id: c_project.project_criterions.pluck(:contest_criterion_id), name: 'like').first&.point.to_i %></span></li>
        <li><i class="icon16-share"></i><span><%= Contest::ContestCriterion.where(id: c_project.project_criterions.pluck(:contest_criterion_id), name: 'share').first&.point.to_i %></span></li>
        <li><i class="icon16-eye"></i><span><%= c_project.views %></span></li>
      </ul>
    </div>
  </div>
</div>
