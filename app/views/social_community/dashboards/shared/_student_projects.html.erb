<div class="bnd-img" style="text-align: center">
  <% if project.introduction_video.present? %>
    <div class='intro_project'>
      <%= project.introduction_video.html_safe %>
    </div>
  <% elsif project.introduction_video.blank? && project.project_show_video.present? %>
    <div class='show_project'>
      <%= project.project_show_video.html_safe %>
    </div>
  <% elsif project.presentation.present? %>
    <div class='presentation_project'>
      <%= link_to image_tag('/global/images/downloadinvoice.png') + 'Click to download', rails_blob_path(project.presentation, disposition: "attachment"), style: "font-size: 15px; font-weight: 600; font-family: 'Montserrat-Bold'" %>
    </div>
  <% end %>
</div>
