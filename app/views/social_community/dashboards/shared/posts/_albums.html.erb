<script>
  $('#lightbox<%= post.id %>').owlCarousel({
    items:1,
    lazyLoad:true,
    loop:true,
    margin:10,
    nav:true,
    autoplayHoverPause:true,
    autoplay:true,
    autoplayTimeout:10000,
  });
</script>
<style>
.image-fit {
  flex: 0 0 auto;
  position: center;
