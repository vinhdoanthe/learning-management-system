<div class="bnd-img" style='text-align: center'>
  <% if product.images.attached?%>
  <% image = product.images.first %>
    <a href="#showPhotoModalInDashboard<%= post.id %>" class="bnd-detail"  data-toggle="modal">
      <span><%= image_tag(image, :class => 'image-fit') %></span>
    </a>
  <!-- Modal -->
  <div class="modal fade" id="showPhotoModalInDashboard<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <span>
            <%= image_tag(image) %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end%>
</div>

<script>
  $('#lightbox<%= post.id %>').owlCarousel({
    items:1,
    lazyLoad:true,
    loop:true,
    margin:10,
    nav:true,
    autoplayHoverPause:true,
    autoplay:true,
    autoplayTimeout:10000,
  });
</script>
<style>
.image-fit {
  flex: 0 0 auto;
  position: center;
  width:100%; 
  height:100%; 
  object-fit:cover;
}
</style>
