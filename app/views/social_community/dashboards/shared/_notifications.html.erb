<div class="panel-content">
  <div class="bnd-title">
    <label class="filter-title">THÔNG BÁO TỪ HỌC VIỆN</label>
    <% new_noti = count_notification_student(current_user)%>
    <p>Có <span class="color-FF0D38"><%= new_noti %></span> tin nhắn mới</p>
  </div>
  <div class="bnd-noti">
    <% notices.each do |noti| %>
    <a href="/notification/broadcast/broadcast_notices"  class="bnn-detail">
      <div class="bnn-img">
        <span><%= image_tag('global/images/teacher-img-default.png') %></span>
      </div>
      <div class="bnn-text">
        <label for="">Thông báo từ Học viên TEKY</label>
        <p><%= noti.title %></p>
      </div>
      <div class="bnn-time">
        <p><%= noti.created_at.strftime('%d-%m-%Y') %></p>
      </div>
    </a>
    <% end %>
    <a href="/notification/broadcast/broadcast_notices" class="pull-right link-all">Xem tất cả</a>
  </div>
</div>
