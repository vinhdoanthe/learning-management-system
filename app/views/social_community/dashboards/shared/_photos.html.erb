<% photos_size = photos.size %>
<div class="box-photos">
  <%  if photos_size <= 2 %>
    <% photos.each do |photo| %>
      <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
        <a>
          <span class="col-xs-12 col-sm-12 col-md-12 col-lg-12 border-white"><%= image_tag(photo.image,:class => 'image-fit border-image') %></span>
        </a>
      </span>
    <% end %>
  <% elsif photos_size == 3 %>
    <div class="row">
      <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
        <a>
          <span class="col-xs-12 col-md-12 col-lg-12 border-white"><%= image_tag(photos[0].image, :class => 'image-fit border-image') %></span>
        </a>
      </span>
      <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
        <a class="col-xs-6 col-md-6 border-white" style="padding-right:0px;">
          <%= image_tag(photos[1].image,:class => 'image-fit border-image photo-height-200') %>
        </a>
      </span>
      <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
        <a class="col-xs-6 col-md-6 border-white" style="padding-left:0px;">
          <%= image_tag(photos[2].image,:class => 'image-fit border-image photo-height-200') %>
        </a>
      </span>
    </div>
  <% elsif photos_size == 4 %>
    <div class="row">
      <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
        <a>
          <span class="col-xs-12 col-sm-12 col-md-12 col-lg-12 border-white"><%= image_tag(photos[0].image,:class => 'image-fit border-image') %></span>
        </a>
      </span>
    </div>
    <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
      <a class="col-xs-4 col-sm-4 col-md-4 col-lg-4  px-0 border-white">
        <%= image_tag(photos[1].image,:class => 'image-fit border-image photo-height-162') %>
      </a>
    </span>
    <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
      <a class="col-xs-4 col-sm-4 col-md-4 col-lg-4  px-0 border-white">
        <%= image_tag(photos[2].image,:class => 'image-fit border-image photo-height-162') %>
      </a>
    </span>
    <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
      <a class="col-xs-4 col-sm-4 col-md-4 col-lg-4  px-0 border-white">
        <%= image_tag(photos[3].image,:class => 'image-fit border-image photo-height-162') %>
      </a>
    </span>
  <%else%>
    <div class="row">
      <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
        <a>
          <span class="col-xs-12 col-sm-12 col-md-12 col-lg-12 border-white"><%= image_tag(photos[0].image,:class => 'image-fit border-image') %></span>
        </a>
      </span>
    </div>
    <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
      <a class="col-xs-4 col-sm-4 col-md-4 col-lg-4 px-0 border-white">
        <%= image_tag(photos[1].image, :class => 'image-fit border-image photo-height-162') %>
      </a>
    </span>
    <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
      <a class="col-xs-4 col-sm-4 col-md-4 col-lg-4 px-0 border-white">
        <%= image_tag(photos[2].image, :class => 'image-fit border-image photo-height-162') %>
      </a>
    </span>
    <span class='show_dashboard_photo' data-toggle='modal' data-target="#showPhotoModalInDashboard" data-post="<%= post.id %>">
      <a class="col-xs-4 col-sm-4 col-md-4 col-lg-4 px-0 border-white">
        <%= image_tag(photos[3].image, :class => 'image-fit photo-height-162') %>
        <span class="detail-plus box-photo-over border-image"><span class="more-number-photo">+<%= photos_size %></span></span>
      </a>
    </span>
  <% end%>
