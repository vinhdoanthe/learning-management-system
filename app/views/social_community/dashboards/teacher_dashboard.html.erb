<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'social_community/dashboards/teacher/dashboard.js' %>
  <%= javascript_include_tag 'social_community/dashboards/shared/pagination.js' %>
  <%= javascript_include_tag 'social_community/dashboards/shared/posts/reactions.js' %>
  <%= javascript_include_tag 'social_community/dashboards/shared/posts/comments.js' %>
<% end %>
<div class="page-content page-thin">
  <div class="row">
    <div class="col-md-7 ">
      <ul class="nav nav-tabs nav-justified nav-primary tab-menu">
        <li class="active" id='li_newFeeds'><a href="#tab_newFeeds" data-toggle="tab"><%= t('social_community.new_feeds') %></a></li>
        <li class="" id='li_homeFeeds'><a href="#tab_homeFeeds" data-toggle="tab"><%= t('social_community.home_feeds') %></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane fade active in" id="tab_newFeeds">
          <div id='newFeeds'>
          </div>
          <div id='infinitive-scrolling-new-feeds' style='display:none'>
          </div>
          <div id='loading-new-feeds' style='display: none;'>
            <%= render :partial => 'partials/feed_loading' %>
          </div>
        </div>
        <div class="tab-pane fade" id="tab_homeFeeds">
          <div id='homeFeeds'>
          </div>
          <div id='loading-home-feeds' style='display: none;'>
            <%= render :partial => 'partials/feed_loading' %>
          </div>
          <div id='infinitive-scrolling' style='display:none' date-time-offset='0'>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="panel" id='coming_soon_session'>
      </div>
      <div class="panel" id='dashboard_noti'>
      </div>
      <div class='panel' id ='checkin_report'>
        <div class="panel-content">
          <div class="bnd-title">
            <label class="filter-title" style = "text-transform:uppercase;">Báo cáo Checkin trong tháng</label>
          </div>
          <div class="checkin_report_content">
            <canvas id="barChartCheckin" width="400" height="400"></canvas>
            <div class='no-checkin-data' style="position: absolute; top: 50%; left: 10%; text-align: center; width: 80%;">
              <p style='text-align: center; display: none'>Chưa có buổi học hoàn thành trong tháng</p></div>
          </div>
        </div>
      </div>
      <div class='panel' id ='attendance_report'>
        <div class="panel-content">
          <div class="bnd-title">
            <label class="filter-title" style = "text-transform:uppercase;">Báo cáo Điểm danh trong tháng</label>
          </div>
          <div class="attendance_report_content">
            <canvas id="barChartAttendance" width="400" height="400"></canvas>
            <div class='no-attendance-data' style="display: none; position: absolute; top: 50%;left: 10%; text-align: center; width: 80%;"><p style='text-align: center;'>Chưa có buổi học hoàn thành trong tháng</p></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :stylesheet_includes do %>
  <%= stylesheet_link_tag 'social_community/dashboard/dashboard' %>
<% end %>
