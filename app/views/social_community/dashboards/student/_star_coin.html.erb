<div class="panel-content row">
  <div class="box-star">
    <div class="col-sm-4">
      <div class="bs-detail">
        <%= image_tag('global/images/star.png', :alt => 'TEKY Star') %>
        <h3 class='pnl-teky-coin-star'><%= number_with_delimiter(current_user.star.to_i, delimiter: '.') %></h3>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="bs-detail">
        <span class='pnl-teky-coin-lbl'>Teky đồng</span>
        <h3 class='pnl-teky-coin-star'><%= number_with_delimiter(current_user.coin.to_i, delimiter: '.') %></h3>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="bs-detail">
        <%= link_to 'Xem tất cả', user_my_coin_star_transactions_path, :class => "view-all-coin-star pull-right link-all" %>
      </div>
    </div>
  </div>
</div>
<style>
  .bs-detail h3.pnl-teky-coin-star {
    font-family: 'Quicksand-Regular' !important;
    font-size: 34px !important;
    font-weight: bold;
  }

  .bs-detail span.pnl-teky-coin-lbl {
    line-height: 17px;
    font-size: 14px;
    font-weight: bold;
    font-family: 'Quicksand-Regular';
    color: #FFC850;
  }

  .bs-detail a.view-all-coin-star {
    font-family: 'Quicksand-Regular';
    font-size: 14px;
    font-weight: bold;
    color: #0654BA;
    text-transform: uppercase;
  }
</style>