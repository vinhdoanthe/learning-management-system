<div class="panel-content row">
  <div class="box-star">
    <div class="col-sm-6">
      <div class="bs-detail">
        <%= image_tag('global/images/star.png', :alt => 'TEKY Star') %>
        <h3 class='pnl-teky-coin-star'><%= number_with_delimiter(current_user.star, delimiter: '.') %></h3>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="bs-detail">
        <span class='pnl-teky-coin-lbl'>Teky đồng</span>
        <h3 class='pnl-teky-coin-star'><%= number_with_delimiter(current_user.coin, delimiter: '.') %></h3>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="bs-detail">
        <a href="" class="view-all-coin-star pull-right link-all">Xem tất cả</a>
      </div>
    </div>
  </div>
</div>    
<style>
.bs-detail h3.pnl-teky-coin-star {
  font-family: 'Montserrat' !important;
  font-size: 34px !important;
  font-weight: bold;
}
.bs-detail span.pnl-teky-coin-lbl {
  line-height: 17px;
  font-size: 14px;
  font-weight: bold;
  font-family: 'Montserrat';
  color: #FFC850;
}
.bs-detail a.view-all-coin-star {
  font-family: 'Montserrat';
  font-size: 14px;
  font-weight: bold;
  color: #0654BA;
  text-transform: uppercase;
}
</style>
