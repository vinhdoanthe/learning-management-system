// Variables: report_objects
$('#attendance_report').html("<%= escape_javascript(render :partial => 'social_community/dashboards/student/attendance_report', :locals => {report_objects: report_objects}) %>")

$(document).ready(function(){
<% report_objects.each_with_index do |object, index| %>
  var chartDiv = $("#barChart<%= index %>");
  <% if object[:status] == Learning::Constant::Batch::StudentSubject::STATE_ON %>
      $('#report_name<%= index %>').html('<h4 style="text-align: center; font-size: 14px;text-transform: uppercase; padding-top:10px;">Lớp: <span style="color: #5DC2A7"> <%= object[:batch_code] %></span> | Học phần: <%= object[:subject_level] %> </h4> <h4 class="att-report-status"> <span class="att-report-sub-active">Đang học</span></h4>')
  <% elsif object[:status] == Learning::Constant::Batch::StudentSubject::STATE_OFF %>
      $('#report_name<%= index %>').html('<h4 style="text-align: center; font-size: 14px;text-transform: uppercase; padding-top:10px;">Lớp: <span style="color: #5DC2A7"> <%= object[:batch_code] %></span> | Học phần: <%= object[:subject_level] %> </h4> <h4 class="att-report-status"> <span class="att-report-sub-done">Đã hoàn thành</span></h4>')
  <% elsif object[:status] == Learning::Constant::Batch::StudentSubject::STATE_SAVE %>
      $('#report_name<%= index %>').html('<h4 style="text-align: center; font-size: 14px;text-transform: uppercase; padding-top:10px;">Lớp: <span style="color: #5DC2A7"> <%= object[:batch_code] %></span> | Học phần: <%= object[:subject_level] %> </h4> <h4 class="att-report-status"> <span class="att-report-sub-save">Bảo lưu</span></h4>')
  <% end %>
  var sum_<%= index %> = <%= object[:count].values.sum %>
  var myChart = new Chart(chartDiv, {
    type: 'pie',
    data: {
      labels: ["Chưa diễn ra", "Buổi bị huỷ", "Có đi học", "Vắng mặt"],
      datasets: [
        {
          data:<%= object[:count].values %>,
          backgroundColor: [
            "#FFCE56",
            "#E7E9ED",
            "#4BC0C0",
            "#FF6384"
          ]
        }]
    },
    options: {
      plugins: {
        datalabels: {
          formatter: function(value, context) {
            if (value === 0){
              return '';
            }
            return value + "(" + Math.round(value/sum_<%= index %>*100) + "%)"; 
          },
        }
      },
      title: {
        display: true,
        fontColor: '#5DC2A7',
        fontSize: 15
      },
      legend: {
        position: 'bottom',
        align: 'start',
        labels: {
          boxWidth: 20,
          padding: 20,
          fontFamily: 'Quicksand-Medium'
        }
      },
      responsive: true,
    }
  });
<% end %>
})
