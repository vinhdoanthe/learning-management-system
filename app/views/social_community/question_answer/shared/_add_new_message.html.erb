<ul>
  <%= form_with(url: social_community_question_answer_messages_path, method: :post) do |f| %>
    <%= f.hidden_field :thread_id, :value => thread_id %>
    <li><span><%= image_tag('global/images/avatar.svg') %></span></li>
    <li>
      <%= f.text_field :content, class: 'new-reply', :placeholder => t('qa.add_new_message'), :id => "add_new_reply_#{thread_id}" %>
    </li>
    <%= f.submit 'Reply', :style => "display: none;" %>
  <% end %> 
</ul>

<style>
::placeholder {
  color: #c1c1c1;
}

.new-reply {
  border-radius: 5px !important;
}
</style>
