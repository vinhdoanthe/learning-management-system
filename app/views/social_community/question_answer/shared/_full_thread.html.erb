<!-- Full thread -->
<div class='fcc-anw qa-thread' >

  <% if thread.nil? %>
    <p class='no-thread'><%= t('qa.no_thread') %></p>
  <% else %>

    <!-- subject -->
    <div class="fcca-head">
      <label>H·ªèi:</label>
      <p><%= thread.subject %> </p>
    </div>

    <div class="fcca-main c-qa-thread-id" data-thread-id='<%= thread._id %>' id='thread_<%= thread._id %>'>
      <!-- add_new_message -->
      <%= render :partial => "social_community/question_answer/shared/full_reply", :locals => {:thread_id => thread._id} %>
      <hr>
      <%= render :partial => 'social_community/question_answer/shared/thread_messages', :locals => {:messages => messages} %> 
    </div>
  <% end %>
</div>
<style>
.qa-thread {
  margin-top: 10px;
}

.no-thread {
  text-align: center;
  padding: 10px;
}
</style>
